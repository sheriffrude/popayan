@model CrearEmpleadoDatosBasicosViewModel
@{
    var edicionDisabled = ViewBag.Edicion == "Si" ? "disabled" : "";
    var lecturaDisabled = ViewBag.Lectura == "Si" ? "disabled" : "";
}

<div class="alert alert-info">
    <h4 class="alert-heading">Información!</h4>
    Ingrese el documento de la persona para cargar los datos registrados previamente

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>


@Html.HiddenFor(p => p.PersonaId, new { @class = "datos-basicos" })
<div class="form-group col-md-6">
    @Html.LabelFor(m => m.Documento, new { @class = "control-label" })
    @if (ViewBag.Edicion == "Si")
    {@Html.TextBoxFor(m => m.Documento, new { @class = "form-control datos-basicos", disabled = "disabled" })}
    else
    {@Html.TextBoxFor(m => m.Documento, new { @class = "form-control datos-basicos" })}
    @Html.ValidationMessageFor(m => m.Documento, "", new { @class = "text-danger" })
</div>
