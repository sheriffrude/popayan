        <img src="@Url.Content(Model.FotoPath)" alt="" class="img-responsive img-perfil-empleado" />
    }
    else
    {
        <img src="@Url.Content("~/Content/images/Gestion/Empleado/foto-por-defecto.png")" alt="Foto" class="img-responsive img-perfil-empleado" />
    }
</div>
