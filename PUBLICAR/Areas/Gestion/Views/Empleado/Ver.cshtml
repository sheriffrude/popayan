@model VerEmpleadoViewModel
@{
    ViewBag.Title = "Información  Empleado";
}

<!-- Titulo y boton volver -->
<div class="col-md-12">
    <div class="pull-left">
    </div>
    <div class="pull-right">
        @if (Sesion.HasPermission("GES-EMPLEADO_NOVEDAD_LISTAR"))
        {
            <a href="@Url.Action("Listar", "EmpleadoNovedad", new { Area = "Gestion", id = Model.Id })" class="btn btn-secondary">
                Novedades
            </a>
        }
        @if (Sesion.HasPermission("GES-EMPLEADO_DOCUMENTO_LISTAR"))
        {
            <a href="@Url.Action("Listar", "EmpleadoDocumento", new { Area = "Gestion", id = Model.Id })" class="btn btn-secondary">
                Documentos
            </a>
        }
        @if (Sesion.HasPermission("GES-EMPLEADO_EDITAR"))
        {
            <a href="@Url.Action("Editar", "Empleado", new { Area = "Gestion", id = Model.Id })" class="btn btn-secondary">
                Editar
            </a>
        }
    </div>
</div>

