@model CrearUsuarioAsignadoViewModel
@{
    ViewBag.Title = "Registrar asignados a un usuario";
}

<div class="form-group col-md-12">
    @Html.LabelFor(m => m.UsuarioId, new { @class = "control-label col-md-12 padding-left-0" })
    <div class="col-md-12 padding-left-0 form-inline">
        <input type="search" id="input-filtro-usuarios" class="form-control" placeholder="Buscar Usuario" />
        <input type="button" value="Buscar" id="input-buscar-usuarios" class="btn btn-secondary" />
        <input type="button" value="Ver todo" onclick="ResetearTablaUsuarios()" class="btn btn-secondary" />
    </div>
    <table id="tabla-usuarios" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th></th>
                <th>Nombre Usuario</th>
                <th>Nombre Persona</th>
                <th>Documento</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    @Html.ValidationMessageFor(m => m.UsuarioId, "", new { @class = "text-danger" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.DepartamentoTraficoId, new { @class = "control-label" })
    <table id="tabla-departamentos-trafico" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th></th>
                <th>Departamento</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    @Html.ValidationMessageFor(m => m.DepartamentoTraficoId, "", new { @class = "text-danger" })
</div>

<div class="form-group col-md-6">
    <div class="col-md-12 padding-left-0 form-inline">
        <input type="search" id="input-filtro-usuarios-asignados" class="form-control" placeholder="Buscar Usuario" />
        <input type="button" value="Buscar" id="input-buscar-usuarios" class="btn btn-secondary" />
    </div>
    <table id="tabla-usuarios-asignados" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th></th>
                <th>Nombre Usuario</th>
                <th>Nombre Persona</th>
                <th>Documento</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!--Formulario-->
@using (Ajax.BeginForm("Crear", "UsuarioAsignado", new { Area = "Gestion" },
                            new AjaxOptions
                            {
                                HttpMethod = "POST",
                                OnBegin = "OnBeginCrear",
                                OnSuccess = "OnSuccessCrear"
                            },
                            new { @class = "", role = "form" }))
{

    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    @Html.ValidationMessage("Success", new { @class = "text-success" })
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.UsuarioId)
    @Html.HiddenFor(m => m.DepartamentoTraficoId)

    <div class="col-md-12 text-right">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a type="button" href="@Url.Action("Listar", "UsuarioAsignado", new { Area = "Gestion" })" class="btn btn-warning">Cerrar</a>
    </div>
}

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_USUARIOS_ACTIVOS = "@Url.Action("ListarActivos", "Usuario", new { Area = "Gestion" })";
        var URL_LISTAR_DEPARTAMENTOS_TRAFICO_ACTIVOS = "@Url.Action("ListarActivos", "DepartamentoTrafico", new { Area = "Gestion" })";
        var URL_LISTAR_USUARIOS_NO_ASIGNADOS = "@Url.Action("ListarNoAsignados", "Usuario", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/UsuarioAsignado/Crear.js")
}