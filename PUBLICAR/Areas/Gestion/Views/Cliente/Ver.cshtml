@model VerClienteViewModel
@{
    ViewBag.Title = "Información Cliente";
}
<!-- Titulo y boton volver -->
<div class="col-md-12">
    <div class="pull-right">
        @if (Sesion.HasPermission("GES-CLIENTE_EDITAR"))
        {
            <a href="@Url.Action("Editar", "Cliente", new {Area = "Gestion", id = Model.Id})" class="btn btn-primary">Editar</a>
        }
    </div>
</div>

<div class="help-block"></div>
<div class="clearfix"></div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.NombreComercial, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.NombreComercial, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(m => m.NombreComercial, "", new { @class = "text-danger" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.NombreLegal, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.NombreLegal, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.Nit, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Nit, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.FechaAniversario, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.FechaAniversario, "{0:dd/MM/yyyy}", new { @class = "form-control", placeholder = "dd/mm/aaaa", @readonly = "readonly" })    
</div>

<div class="form-group col-md-4">
    @Html.LabelFor(m => m.Pais, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Pais, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group col-md-4">
    @Html.LabelFor(m => m.Departamento, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Departamento, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group col-md-4">
    @Html.LabelFor(m => m.Ciudad, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.Telefonos, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Telefonos, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group col-md-6">
    @Html.LabelFor(m => m.Direccion, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.CorreoContacto, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.CorreoContacto, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.CorreoGerente, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.CorreoGerente, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="clearfix"></div>
<hr />

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" id="btn-ver-todo" class="btn btn-secondary" value="VER TODO" />
            </div>
        </form>
    </div>
</div>

<div class="col-md-12">
    <table id="tabla-empresas" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Identificador</th>
                <th class="text-center">Estado</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_ASOCIACION_CLIENTE_EMPRESAS = "@Url.Action("ListarAsociacionClienteEmpresas", "Cliente", new { Area = "Gestion", Id = Model.Id } )";
    </script>

    @Scripts.Render("~/Areas/Gestion/scripts/Cliente/Ver.js")
}