@{
    ViewBag.Title = "Cargos";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaCargo()" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-CARGO_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "Cargo", new { Area = "Gestion" })" class="btn btn-secondary" data-toggle="modal" data-target="#">Adicionar</a>
        </div>
    }
</div>

<div class="col-md-12">
    <table id="tabla-cargo" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Descripción</th>
                <th class="text-center">Rol</th>
                <th class="text-center">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_CARGOS = "@Url.Action("Listar", "Cargo", new { Area = "Gestion" })";
        var URL_EDITAR_CARGO = "@Url.Action("Editar", "Cargo", new { Area = "Gestion" })";
        var PERMISO_EDITAR_CARGO = ("@Sesion.HasPermission("GES-CARGO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/Cargo/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/Cargo/Editar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/Cargo/Crear.js")
}