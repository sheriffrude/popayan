@model ListarEmpresaBancoContactoViewModel

@{
    ViewBag.Title = "Contactos del Banco";
}

<!-- Titulo y boton volver -->
<div class="row">
    <div class="col-md-6 col-xs-6">
        @if (Model.LogoModel != null)
        {
            <div class="col-md-6">
                <img src="@($"data:{Model.LogoModel.FileContentType};base64,{Convert.ToBase64String(Model.LogoModel.FileContent)}")" alt="" class="img-responsive img-center" />
            </div>
        }
        <h3 class="col-md-12 text-left"><strong>@ViewBag.Title</strong></h3>
    </div>
</div>

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-default" value="BUSCAR" />
            </div>
        </form>
    </div>
    <div class="col-md-2 text-right">
        @if (Sesion.HasPermission("GES-EMPRESA_BANCO_CONTACTO_CREAR"))
        {
            <a href="@Url.Action("Crear", "EmpresaBancoContacto", new {Area = "Gestion", id = Model.EmpresaId, bancoId = Model.BancoId})" class="btn btn-gestion">Adicionar</a>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-banco-contacto" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Area</th>
                    <th class="text-center">Cargo</th>
                    <th class="text-center">Telefono(s)</th>
                    <th class="text-center">Celulare(s)</th>
                    <th class="text-center">Correo</th>
                    <th class="text-center">Fecha Nacimiento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")
<!--Script listar paises-->
@section Scripts{
    <script type="text/javascript">
        var URL_EMPRESA_BANCO_CONTACTO_LISTAR = "@Url.Action("Listar", "EmpresaBancoContacto", new { Area = "Gestion", id = Model.EmpresaId, bancoId = Model.BancoId })";
        var URL_EMPRESA_BANCO_CONTACTO_EDITAR = "@Url.Action("Editar", "EmpresaBancoContacto", new { Area = "Gestion" })";
        var PERMISO_EMPRESA_BANCO_CONTACTO_EDITAR = ("@Sesion.HasPermission("GES-EMPRESA_BANCO_CONTACTO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaBancoContacto/Listar.js")
}