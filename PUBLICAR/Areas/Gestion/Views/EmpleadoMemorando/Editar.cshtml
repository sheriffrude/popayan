@model EditarEmpleadoMemorandoViewModel
@{
    ViewBag.Title = "Editar memorando a empleado";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Editar", "EmpleadoMemorando", new { Area = "Gestion" },
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnBegin = "OnBeginEditarEmpleadoMemorando",
                            OnComplete = "OnCompleteEditarEmpleadoMemorando"
                        },
                        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <input id="Id" name="Id" value="@Model.Id" hidden />
        <input id="IdMemorando" name="IdMemorando" value="@Model.IdMemorando" hidden />

        <div class="form-group">
            @Html.LabelFor(m => m.EmpleadoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.EmpleadoId, Model.ListaEmpleados, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.EmpleadoId, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.Observaciones, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Observaciones, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group" id="archivoParaSubir" style="display: none">
            @Html.LabelFor(m => m.Memorando, new { @class = "control-label" })
            <input id="Memorando" name="Memorando" type="file" onchange="SubirArchivo(this)" class="form-control" />
            @Html.ValidationMessageFor(m => m.Memorando, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" id="archivoCargado" style="display: block">
            @Html.LabelFor(m => m.Memorando, new { @class = "control-label" })
            <input value="@Model.Memorando.OriginalName" class="form-control" readonly />
            <button type="button" class="btn btn-warning" onclick="cambiarArchivo()" >Cambiar archivo</button>
            @Html.ValidationMessageFor(m => m.Memorando, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, false)
                    Inactivar
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, true)
                    Activar
                </label>
            </div>
            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>