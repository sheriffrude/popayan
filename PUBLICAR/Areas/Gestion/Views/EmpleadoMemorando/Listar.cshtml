@{
    ViewBag.Title = "Memorandos de empleados";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaEmpleadoMemorando()" />
                </div>
            </form>
        </div>
        @if (Sesion.HasPermission("GES-EMPRESA_MEMORANDO_CREAR"))
        {
            <div class="pull-right">
                <a href="@Url.Action("Crear", "EmpleadoMemorando", new {Area = "Gestion", id = ViewBag.IdEmpresa})" class="btn btn-secondary" data-toggle="modal" data-target="#">Crear memorando</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-empleado-memorando" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Empleado</th>
                <th class="text-center">Observacion</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Memorando</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_EMPLEADO_MEMORANDO = "@Url.Action("Listar", "EmpleadoMemorando", new { Area = "Gestion", id = ViewBag.IdEmpresa })";
        var URL_DESCARGAR_EMPLEADO_MEMORANDO = "@Url.Action("DownloadFile", "EmpleadoMemorando", new { Area = "Gestion" })";
        var PERMISO_DESCARGAR_EMPLEADO_MEMORANDO = ("@Sesion.HasPermission("GES-EMPRESA_MEMORANDO_DESCARGAR")" === "True");
        var URL_EDITAR_EMPLEADO_MEMORANDO  = "@Url.Action("Editar", "EmpleadoMemorando", new { Area = "Gestion", id = ViewBag.IdEmpresa })";
        var PERMISO_EDITAR_EMPLEADO_MEMORANDO = ("@Sesion.HasPermission("GES-EMPRESA_MEMORANDO_EDITAR")" === "True");
        var URL_SUBIR_ARCHIVOS_TEMP = "@Url.Action("UploadFile", "EmpleadoMemorando", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoMemorando/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoMemorando/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoMemorando/Editar.js")
}