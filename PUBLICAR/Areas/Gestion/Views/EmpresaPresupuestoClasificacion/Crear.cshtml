@model EmpresaPresupuestoClasificacionCrearViewModel
@{
    ViewBag.Title = "Asociar clasificación de presupuesto";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Crear", "EmpresaPresupuestoClasificacion", new { Area = "Gestion" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnComplete = "EmpresaPresupuestoClasificacionCrear.OnComplete"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        @Html.HiddenFor(m => m.EmpresaId)

        <div class="form-group">
            @Html.LabelFor(m => m.PresupuestoClasificacionId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.PresupuestoClasificacionId, Model.ListaPresupuestosClasificaciones, "Seleccione", new { @class = "form-control selectpicker" })
            @Html.ValidationMessageFor(m => m.PresupuestoClasificacionId, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>