@model ListarProveedorViewModel
@{
    ViewBag.Title = "Proveedores";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <div id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="button" class="btn btn-parametrizacion" value="BUSCAR" onclick="ListarProveedores.reconstruirTabla()" />
                    <input type="button" class="btn btn-parametrizacion" value="VER TODO" onclick="ListarProveedores.ResetearTablaPais()" />
                </div>
            </div>
        </div>
        @if (Sesion.HasPermission("GES-PROVEEDOR_CREAR")){
            <div class="col-md-1 col-md-offset-5">
                <a href="@Url.Action("Crear", "Proveedor", new {Area = "Gestion"})" class="btn btn-secondary">Adicionar</a>
            </div>
        }
    </div>
</div>
<hr />

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        @Html.HiddenFor(m => m.Id)
        <table id="tabla-proveedor" class="table table-striped table-bordered compact text-center" style="font-size:11.5px!important">
            <thead>
                <tr>
                    <th class="text-center">Nit</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Dirección</th>
                    <th class="text-center">Telefono</th>
                    <th class="text-center">Correo</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <!--Script listar Empresa impuestos-->
    <script type="text/javascript">
        var URL_LISTAR_PROVEEDOR = "@Url.Action("Listar", "Proveedor", new { Area = "Gestion" })";
        var URL_VER_PROVEEDOR = "@Url.Action("Ver", "Proveedor", new { Area = "Gestion" })";
        var URL_CAMBIAR_ESTADO_PROVEEDOR = "@Url.Action("CambiarEstado", "Proveedor", new { Area = "Gestion" })";
        var URL_DOCUMENTO_PROVEEDOR = "@Url.Action("Listar", "ProveedorDocumentoLegal", new { Area = "Gestion"})";
        var PERMISO_DOCUMENTO_PROVEEDOR = ("@Sesion.HasPermission("GES-PROVEEDOR_DOCUMENTO_LEGAL_LISTAR")" === "True");
        var PERMISO_VER_PROVEEDOR = ("@Sesion.HasPermission("GES-PROVEEDOR_VER")" === "True");
        var PERMISO_CAMBIAR_ESTADO_PROVEEDOR = ("@Sesion.HasPermission("GES-PROVEEDOR_EDITAR")" === "True");
        var URL_SERVICIOS = "@Url.Action("Servicios", "Proveedor", new { Area = "Gestion" })";
        var URL_LISTAR_SERVICIOS = "@Url.Action("ListarServicios", "Proveedor", new { Area = "Gestion" })";
        var URL_ELIMINAR_ASOCIACION_SERVICIO = "@Url.Action("EliminarAsociacionServicio", "Proveedor", new { Area = "Gestion" })";
        var URL_AGREGAR_SERVICIO = "@Url.Action("CrearAsociacionServicio", "Proveedor", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/Proveedor/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/Proveedor/ListarServicios.js")
}