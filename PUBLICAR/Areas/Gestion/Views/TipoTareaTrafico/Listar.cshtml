@{
    ViewBag.Title = "Tipos de tarea por departamento de tráfico (Tráfico)";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <div id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="button" class="btn btn-secondary" value="BUSCAR" onclick="ListarTipoTareaTrafico.reconstruirTabla()" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ListarTipoTareaTrafico.ResetearTablaPais()" />
                </div>
            </div>
        </div>
        @if (Sesion.HasPermission("GES-TIPO_TAREA_TRAFICO_LISTAR"))
        {
            <div class="col-md-1 col-md-offset-5">
                <a href="@Url.Action("Crear", "TipoTareaTrafico", new {Area = "Gestion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-tareas" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Tipo de tarea</th>
                    <th class="text-center">Departamento de tráfico</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var urlListar = "@Url.Action("Listar", "TipoTareaTrafico", new { area = "Gestion" })";
        var urlEditar = "@Url.Action("Editar", "TipoTareaTrafico", new { area = "Gestion" })";
    </script>

    @Scripts.Render("~/Areas/Gestion/Scripts/TipoTareaTrafico/Listar.js")
    @Scripts.Render("~/Areas/Gestion/Scripts/TipoTareaTrafico/Crear.js")
}

