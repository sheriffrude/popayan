@model EditarTarifarioItemViewModel
@{
    ViewBag.Title = "Editar";
    var ListaGrupoTarifarios = ViewBag.ListaGrupoTarifarios as IEnumerable<SelectListItem>;
    var ListaImpuestosOrdenables = ViewBag.ListaImpuestosOrdenables as IEnumerable<SelectListItem>;
    var ListaSubgruposPorGrupos = ViewBag.ListaSubgruposPorGrupos as IEnumerable<SelectListItem>;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm("EditarItem", "Tarifario",
                                                                        new { Area = "Gestion" },
                                                                        FormMethod.Post,
                                                                        new { @class = "", role = "form", onsubmit = "onSuccessEditarTarifarioItem();" }))
    {
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.GesEmpresaId)

        <div class="form-group">
            @Html.LabelFor(m => m.GrupoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.GrupoId, ListaGrupoTarifarios, "Seleccione", new { onchange = "OnchangeGrupoEditar(this, '" + Url.Action("ListaSubgruposPorGrupos", "Tarifario", new { Area = "Gestion" }) + "');", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GrupoId, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.SubGrupoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.SubGrupoId, ListaSubgruposPorGrupos, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.SubGrupoId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Item, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Item, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Item, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Tarifa, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Tarifa, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Tarifa, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Impuesto, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Impuesto, ListaImpuestosOrdenables, "Seleccione", new { @class = "form-control", onchange = "OnChangeImpuesto(this, '" + Url.Action("ListaValorPorImpuesto", "ImpuestoRetencion", new { Area = "Parametrizacion" }) + "');" })
            @Html.ValidationMessageFor(m => m.Impuesto, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Volumen, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Volumen, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Volumen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DescuentosAdicionales, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DescuentosAdicionales, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DescuentosAdicionales, "", new { @class = "text-danger" })
        </div>


        <div class="text-right">
            <button type="submit" class="btn btn-default">Guardar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
