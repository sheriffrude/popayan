@model TarifarioViewModel
@{
    ViewBag.Title = "Grupos";
}

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla-grupo" action="#" class="form-inline">
            <div class="form-group">
                <input type="search" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-default" value="BUSCAR" />
            </div>
        </form>
    </div>
    <div class="col-md-2 text-right">
        @if (Sesion.HasPermission("GES-TARIFARIOGRUPO_CREAR"))
        {
            <a href="@Url.Action("CrearGrupo", "Tarifario", new {Area = "Gestion", id = Model.EmpresaId })" class="btn btn-default" data-toggle="modal" data-target="#">Adicionar</a>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        @*@Html.HiddenFor(m => m.EmpresaId)*@
        <table id="tabla-tarifario-grupo" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre del grupo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
            <thead>
            <tr>
                    <th class="text-center">Área</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

        
