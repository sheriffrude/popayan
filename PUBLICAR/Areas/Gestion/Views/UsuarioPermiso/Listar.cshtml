@{
    ViewBag.Title = "Permiso especificos del usuario";
}

<div class="help-block"></div>

<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaUsuariosPermisos()" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-USUARIO_PERMISO_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "UsuarioPermiso", new {Area = "Gestion", id = ViewBag.IdUsuario })" class="btn btn-secondary" data-toggle="modal" data-target="#">Asignar permiso</a>
        </div>
    }
</div>

<div class="col-md-12">
    <table id="tabla-usuarios-permisos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Permiso</th>
                <th class="text-center">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    <script type="text/javascript">
        var URL_LISTAR_USUARIO_PERMISO = "@Url.Action("Listar", "UsuarioPermiso", new { Area = "Gestion", id = ViewBag.IdUsuario })";
        var URL_EDITAR_USUARIO_PERMISO = "@Url.Action("Editar", "UsuarioPermiso", new { Area = "Gestion" })";
        var PERMISO_EDITAR_USUARIO_PERMISO = ("@Sesion.HasPermission("GES-USUARIO_PERMISO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Gestion/scripts/UsuarioPermiso/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/UsuarioPermiso/Crear.js")
}