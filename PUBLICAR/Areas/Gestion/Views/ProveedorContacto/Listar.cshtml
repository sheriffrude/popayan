
@{
    ViewBag.Title = "Listar Contactos";
}

<div>
    <div class="help-block"></div>
    <!--Filtro de la tabla-->
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div id="form-filtro-tabla" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                        <input type="button" class="btn btn-parametrizacion" value="BUSCAR" onclick="ListarContactos.reconstruirTabla()" />
                        <input type="button" class="btn btn-parametrizacion" value="VER TODO" onclick="ListarContactos.ResetearTablaPais()" />
                    </div>
                </div>
            </div>
            @*@if (Sesion.HasPermission("PAR-SALARIO-INTEGRAL-CREAR))
            {*@
            <div class="col-md-1 col-md-offset-5">
                <a href="@Url.Action("Crear", "ProveedorContacto", new {Area = "Gestion", Id = ViewBag.Id})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
            @*}*@
        </div>
    </div>
    <hr />

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <table id="tabla-Contactos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Cargo</th>
                        <th class="text-center">Correo</th>
                        <th class="text-center">Telefono</th>
                        <th class="text-center">Celular</th>
                        <th class="text-center">Dia Cumpleaños</th>
                        <th class="text-center">Mes Cumpleaños</th>
                        <th class="text-center">Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Gestion/Scripts/ProveedorContacto/Listar.js")

    <script type="text/javascript">
        var urlListar = "@Url.Action("Listar", "ProveedorContacto", new { area = "Gestion", Id = ViewBag.Id })";
        var urlEditar = "@Url.Action("Editar", "ProveedorContacto", new { area = "Gestion" })";
    </script>
}


