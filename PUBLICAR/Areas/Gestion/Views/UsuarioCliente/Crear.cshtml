@model CrearUsuarioClienteViewModel
@{
    ViewBag.Title = "Asignar clientes y productos a un usuario";
}

<!--Formulario-->
@using (Ajax.BeginForm("Crear", "UsuarioCliente", new { Area = "Gestion" },
                new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginForm", OnSuccess = "OnSuccessForm" },
                new { @class = "", role = "form" })
                )
{
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    @Html.ValidationMessage("Success", new { @class = "text-success" })
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.UsuarioId)
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.UsuarioId, new { @class = "control-label col-md-12 padding-left-0" })
        <div class="col-md-12 padding-left-0 form-inline">
            <input type="search" id="input-filtro-usuarios" class="form-control" placeholder="Buscar Usuario" />
            <input type="button" value="Buscar" id="input-buscar-usuarios" class="btn btn-secondary" />
        </div>
        <table id="tabla-usuarios" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <td></td>
                    <td>Nombre Usuario</td>
                    <td>Nombre Persona</td>
                    <td>Documento</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        @Html.ValidationMessageFor(m => m.UsuarioId, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.ClienteId)
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.ClienteId, new { @class = "control-label" })
        <table id="tabla-clientes" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Cliente</th>
                    <th>Nit</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        @Html.ValidationMessageFor(m => m.ClienteId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Productos, new { @class = "control-label" })
        <table id="tabla-productos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <td></td>
                    <td>Producto</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div class="col-md-12 text-right">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a type="button" href="@Url.Action("Listar", "UsuarioCliente", new { Area = "Gestion" })" class="btn btn-warning">Cerrar</a>
    </div>
}

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_USUARIOS_ACTIVOS = "@Url.Action("ListarActivos", "Usuario", new { Area = "Gestion" })";
        var URL_LISTAR_CLIENTES = "@Url.Action("ListarClientes", "UsuarioCliente", new { Area = "Gestion" })";
        var URL_LISTAR_PRODUCTOS = "@Url.Action("ListarProductos", "UsuarioCliente", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/UsuarioCliente/Crear.js")
}