@model ListarClienteProductoViewModel
@{
    ViewBag.Title = "Productos de clientes";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                @Html.LabelFor(m => m.FiltroClienteId, new { @class = "control-label" })
                <br />
                @Html.DropDownListFor(m => m.FiltroClienteId, Model.ListaClientes, "Seleccione", new
                {
                    @class = "form-control",
                    onchange = "OnChangeCliente(this, '" + Url.Action("ListaOpcionesPorCliente", "ClienteProducto", new { Area = "Gestion" }) + "');"
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FiltroProductoId, new { @class = "control-label" })
                <br />
                @Html.DropDownListFor(m => m.FiltroProductoId, Model.ListaProductos, "Seleccione", new
                {
                   @class = "form-control",
                   onchange = "OnChangeProducto(this);"
                })
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <br />
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="button" class="btn btn-secondary" value="Buscar" onclick="RecargarTablaClienteProductos()" />
            </div>

        </form>
    </div>

    @if (Sesion.HasPermission("GES-CLIENTE_PRODUCTO_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "ClienteProducto", new { Area = "Gestion" })" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
        </div>
    }
</div>

<div class="clearfix"></div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-cliente-producto" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Cliente</th>
                <th class="text-center">Producto</th>
                <th class="text-center">Fee</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_CLIENTE_PRODUCTO = "@Url.Action("Listar", "ClienteProducto", new { Area = "Gestion" })";
        var URL_CLIENTE_PRODUCTO_EDITAR = "@Url.Action("Editar", "ClienteProducto", new { Area = "Gestion" })";
        var URL_CAMBIAR_ESTADO_CLIENTES_PRODUCTO = "@Url.Action("CambiarEstado", "ClienteProducto", new { Area = "Gestion" })";
        var PERMISO_EDITAR_CLIENTE_PRODUCTO = ("@Sesion.HasPermission("GES-CLIENTE_PRODUCTO_EDITAR")" === "True");
        var PERMISO_CAMBIAR_ESTADO_CLIENTE_PRODUCTO = ("@Sesion.HasPermission("GES-CLIENTE_PRODUCTO_CAMBIAR_ESTADO")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/ClienteProducto/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/ClienteProducto/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/ClienteProducto/Editar.js")
}