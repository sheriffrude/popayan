@model ListarAreaViewModel
@{
    ViewBag.Title = "Áreas";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-AREA_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "Area", new { Area = "Gestion", id = Model.UnidadNegocioId })" class="btn btn-secondary" data-toggle="modal" data-target="#">Adicionar</a>
        </div>
    }
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-Area" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_AREA = "@Url.Action("Listar", "Area", new { Area = "Gestion", id = Model.UnidadNegocioId })";
        var URL_EDITAR_AREA = "@Url.Action("Editar", "Area", new { Area = "Gestion" })";
        var PERMISO_EDITAR_AREA = ("@Sesion.HasPermission("GES-AREA_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/Area/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/Area/Editar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/Area/Crear.js")
}