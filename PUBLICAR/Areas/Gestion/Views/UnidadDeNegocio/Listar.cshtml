@model ListarUnidadesDeNegocioViewModel
@{
    ViewBag.Title = "Unidades de Negocio";
}

<div class="col-md-12 text-center">
    <h3>@Model.NombreComercial</h3>
    <br />
    @if (Model.LogoPath != null)
    {
        <img src="@Url.Content(Model.LogoPath)" class="img-responsive img-center" />
    }
</div>

<div class="clearfix"></div>
<div class="ln_solid"></div>

<div class="col-sm-12 padding-top-1">
    <div class="row">
        <div class="col-md-12">
            @if (Sesion.HasPermission("GES-UNIDAD_NEGOCIO_CREAR"))
            {
                <br />
                <div class="text-right">
                    <a href="@Url.Action("Crear", "UnidadDeNegocio", new { Area = "Gestion", id = Model.EmpresaId })" data-toggle="modal" data-target="#" class="btn btn-primary">
                        Adicionar
                    </a>
                </div>
            }
            <table id="tabla-unidades-negocio" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script>
        var URL_LISTAR_UNIDADES_NEGOCIO = "@Url.Action("Listar", "UnidadDeNegocio", new { Area = "Gestion", empresaId = Model.EmpresaId })";
         var URL_VER_DETALLE = "@Url.Action("Menu", "UnidadDeNegocio", new { Area = "Gestion"})";
         var PERMISO_VER_DETALLE = ("@Sesion.HasPermission("GES-UNIDAD_NEGOCIO_VER")" === "True");
    </script>

    @Scripts.Render("~/Areas/Gestion/scripts/UnidadDeNegocio/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/UnidadDeNegocio/Listar.js")
}