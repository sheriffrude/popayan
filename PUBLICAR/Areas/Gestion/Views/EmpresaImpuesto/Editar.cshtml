
@model EditarEmpresaImpuestoViewModel

@{
    ViewBag.Title = "Editar";
    var listaPeriocidad = ViewBag.ListaPeriocidadPago as IEnumerable<SelectListItem>;
}
<script type="text/javascript">
    var URL_TABLA_CORREO = "@Url.Action("ListarCorreos", "EmpresaImpuesto", new { Area = "Gestion", id = Model.Id })";
    ConstruirTablaCorreos(URL_TABLA_CORREO);
</script>

<div id="modal-editar-impuesto">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Editar impuesto</h4>
    </div>

    @using (Ajax.BeginForm("Editar", "EmpresaImpuesto", new { Area = "Gestion" },
                                                                new AjaxOptions
                                                                {
                                                                    HttpMethod = "POST",
                                                                    OnBegin = "OnBeginEditarImpuestoEmpresa",
                                                                    OnComplete = "OnCompleteEditarImpuestoEmpresa"
                                                                },
                                                                new { @class = "", role = "form" })
                                                                )
    {
        <div class="modal-body">
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            @Html.ValidationMessage("Success", new { @class = "text-success" })
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.EmpresaId)
            @Html.HiddenFor(m => m.ImpuestoId)

            @Html.HiddenFor(m => m.EmpresaId)
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Nombre, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", type = "number", min = "0", step = "0.01" })
                @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.PeriocidadId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.PeriocidadId, listaPeriocidad, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
                @Html.ValidationMessageFor(m => m.PeriocidadId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.FechaVencimiento, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FechaVencimiento, new { @class = "form-control", placeholder = "dd/mm/aaaa", onkeydown = "javascript:return false;" })
                @Html.ValidationMessageFor(m => m.FechaVencimiento, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(m => m.Estado, false)
                        Inactivar
                    </label>
                </div>
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(m => m.Estado, true)
                        Activar
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.CorreoNotificacion, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.CorreoNotificacion, new { @class = "form-control", type = "email" })
                @Html.ValidationMessageFor(m => m.CorreoNotificacion, "", new { @class = "text-danger" })

                <div class="text-right" style="padding-top: 10px;">
                    <button type="button" class="btn btn-secondary text-right" onclick="agregarCorreoImpuestoEditar()">Agregar</button>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12" id="listado-correos">
                    <table id="tabla-correos-notificacion-editar" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                        <thead>
                            <tr>
                                <th class="text-center">Correos eléctronicos</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-default">Guardar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
<script>initEditarImpuesto();</script>