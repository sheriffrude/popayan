
@{
    ViewBag.Title = "Listar items tarifarios";
}

<div>
    <div class="help-block"></div>
    <!--Filtro de la tabla-->
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div id="form-filtro-tabla" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                        <input type="button" class="btn btn-parametrizacion" value="BUSCAR" onclick="ListarContactos.reconstruirTabla()" />
                        <input type="button" class="btn btn-parametrizacion" value="VER TODO" onclick="ListarContactos.ResetearTablaPais()" />
                    </div>
                </div>
            </div>
            @*@if (Sesion.HasPermission("PAR-SALARIO-INTEGRAL-CREAR))
