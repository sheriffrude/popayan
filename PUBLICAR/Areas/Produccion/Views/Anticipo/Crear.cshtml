@model AnticipoViewModel
@{
    ViewBag.Title = "Crear desembolso de anticipo";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Crear", "Anticipo", new { Area = "Produccion" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnBegin = "AnticipoListar.OnBeginCrear",
            OnSuccess = "AnticipoListar.OnSuccessCrear"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.PresupuestoId)
        @Html.HiddenFor(m => m.VersionPresupuestoId)
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })

        <div class="col-md-12">
            @Html.LabelFor(m => m.FormaPagoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.FormaPagoId, Model.FormaPago, "Seleccione",
                new
                {
                    @class = "form-control"
                })
            @Html.ValidationMessageFor(m => m.FormaPagoId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.FechaDesembolso, new { @class = "control-label" })
            <div class="input-group date">
                @Html.TextBoxFor(m => m.FechaDesembolso, new { @class = "form-control datepicker" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.FechaDesembolso, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-12">
            @Html.LabelFor(m => m.Observaciones, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Observaciones, 3, 120, new { @class = "form-control", maxlength = "500" })
            @Html.ValidationMessageFor(m => m.Observaciones, "", new { @class = "text-danger" })
        </div>
        <div class="clearfix"></div>
        <br />
        <div class="ln_solid"></div>
        <div class="clearfix"></div>
        <div class="text-right">
            @if (Sesion.HasPermission("PRO-ANTICIPO_DESEMBOLSAR_CREAR"))
            {
                <button type="submit" class="btn btn-success">Guardar</button>
            }
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
<script>
        $("#FechaDesembolso").datetimepicker({
            viewMode: 'days',
            format: 'DD/MM/YYYY'
        });
</script>
