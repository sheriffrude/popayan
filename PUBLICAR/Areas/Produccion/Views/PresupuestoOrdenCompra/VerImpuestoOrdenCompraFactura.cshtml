    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
    <div class="clearfix"></div>


    @Html.HiddenFor(m => m.OrdenCompraId)

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <table id="tabla-impuesto-orden-compra" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaImpuestos != null)
                    {
                        foreach (dynamic item in Model.ListaImpuestos)
                        {
                            <tr>
                                <td class="text-center">@item.NombreImpuesto</td>
                                <td class="text-center"><input type="text" class="form-control" data-format-price="" name="data-price" value="@item.TotalImpuesto" readonly/></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">
                                NO CONTIENE ADJUNTOS
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

