@{
    ViewBag.Title = "Consultar facturas radicadas de clientes";
}
<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.Title</h2>
        <ul class="nav navbar-right panel_toolbox text-right">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <div class="col-md-12">
            <div class="form-group col-md-12">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="texto">Ingrese el texto:</label>
                        <input type="text" class="form-control" id="texto">
                    </div>
                    <div class="form-group col-md-3" id="select-empresa-id">
                        <label class="control-label">Seleccione una empresa</label>
                        <select class="form-control selectpicker" data-live-search="true" onchange="consultarFacturaPagoCliente.OnChangeEmpresa(this)" id="select-empresa"></select>
                    </div>
                    <div class="form-group col-md-3" id="select-cliente-id">
                        <label class="control-label">Seleccione un cliente</label>
                        <select class="form-control selectpicker" data-live-search="true" onchange="consultarFacturaPagoCliente.OnChangeCliente(this)" id="select-cliente"></select>
                    </div>
                    <div class="form-group col-md-3" id="select-producto-id">
                        <label class="control-label">Seleccione un producto</label>
                        <select class="form-control selectpicker" data-live-search="true" onchange="consultarFacturaPagoCliente.OnChangeProducto(this)" id="select-producto"></select>
                    </div>
                    <div class="form-group col-md-3" id="select-ot-id">
                        <label class="control-label">Seleccione una OT</label>
                        <select class="form-control selectpicker" data-live-search="true" id="select-ot"></select>
                    </div>
                    <div class="form-group col-md-3 ">
                        <br />
                        <a class="btn btn-warning" onclick="consultarFacturaPagoCliente.CrearTablaFacturasPagoCliente()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                    </div>
                </div>

                <div class="form-group col-md-12" id="factura-pago-cliente">
                    <table id="tabla_factura_pago_cliente" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                        <thead>
                            <tr>
                                <th colspan="1" scope="col"><center> </center></th>
                                <th colspan="10" scope="col"><center>Datos de factura de presupuesto</center></th>
                                <th colspan="7" scope="col"><center>Datos del pago</center></th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Número interno factura</th>
                                <th>Empresa</th>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>OT</th>
                                <th>Número de ppto</th>
                                <th>Número de la factura</th>
                                <th>Valor Factura</th>
                                <th>Impuestos</th>
                                <th>Total</th>
                                <th>Estado factura</th>
                                <th>Tipo pago</th>
                                <th>Total pago</th>
                                <th>Fecha de pago</th>
                                <th>Usuario que registró el pago</th>
                                <th>Estado pago</th>
                                <th>Activar/Cancelar</th>
                                <th>Ver detalle</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
