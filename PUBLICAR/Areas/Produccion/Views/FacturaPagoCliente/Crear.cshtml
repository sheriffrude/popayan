@model CrearFacturaPagoClienteViewModel
@{
    //Titulo
    ViewBag.Title = "Registrar pago cliente";
    //Clase body personalizado
    ViewBag.BodyClass = "body-background-gray";
}
<!--Formulario-->
@using (Ajax.BeginForm("Crear", "FacturaPagoCliente", new { Area = "Produccion" },
                                                                    new AjaxOptions
                                                                    {
                                                                        HttpMethod = "POST",
                                                                        OnBegin = "registrarFacturaPagoCliente.OnBeginFormCrearFacturaPagoCliente",
                                                                        OnComplete = "registrarFacturaPagoCliente.OnCompleteFacturaPagoFacturaCliente"
                                                                    }, new { @class = "", role = "form", @id = "FormularioFacturaPagoCliente" })
                                                                    )
{
    @Html.AntiForgeryToken()
    <div class="clearfix"></div>
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    @Html.ValidationMessage("Success", new { @class = "text-success" })
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
    <div class="x_panel">
        <div class="x_title">
            <h2>@ViewBag.Title</h2>
            <ul class="nav navbar-right panel_toolbox text-right">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-12 padding-left-0">
                <div class="form-group col-md-3">
                    @Html.LabelFor(m => m.EmpresaId, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.EmpresaId, Model.ListaEmpresas, "Seleccione", new
               {
                   @Value = "1",
                   @class = "form-control selectpicker",
                   data_live_search = "true",
                   onchange = "registrarFacturaPagoCliente.OnchangeEmpresa(this," + "'" + Url.Action("ListarOpcionesPorEmpresa", "EmpresaCliente", new { Area = "Gestion" }) + "'" + ")"

               })
                    @Html.ValidationMessageFor(m => m.EmpresaId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(m => m.ClienteId, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.ClienteId, Model.ListaClientes, "Seleccione", new
               {
                   @class = "form-control selectpicker",
                   data_live_search = "true",
                   onchange = "registrarFacturaPagoCliente.OnchangeCliente(this," + "'" + Url.Action("ListarOpcionesPorPresupuesto", "FacturaCliente", new { Area = "Produccion" }) + "'" + ")"
               })
                    @Html.ValidationMessageFor(m => m.ClienteId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    @Html.LabelFor(m => m.FacturaId, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.FacturaId, Model.ListaFacturas, "Seleccione", new
               {
                   @class = "form-control selectpicker",
                   data_live_search = "true",
                   onchange = "registrarFacturaPagoCliente.OnchengeFactura(this)"
               })
                    @Html.ValidationMessageFor(m => m.FacturaId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12 padding-left-0 hidden" id="detalle-pago">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title pull-left">
                            <a data-toggle="collapse" href="#collapse-encabezado">
                                <strong>DETALLE FACTURA</strong>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="collapse-encabezado" class="panel-collapse collapse-encabezado">
                        <div class="panel-body">
                            <div class="form-horizontal small">

                                <div class="col-md-4">
                                    <label class="control-label">Órden de trabajo:</label>
                                    <input class="form-control" id="orden-trabajo" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Producto:</label>
                                    <input class="form-control" id="producto" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Estado de la factura:</label>
                                    <input class="form-control" id="estado-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Número interno de factura:</label>
                                    <input class="form-control" id="numero-interno-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Número factura:</label>
                                    <input class="form-control" id="numero-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Fecha factura:</label>
                                    <input class="form-control" id="fecha-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Valor factura:</label>
                                    <input class="form-control" id="valor-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Valor impuestos:</label>
                                    <input class="form-control" id="valor-impuestos" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Total factura:</label>
                                    <input class="form-control" id="valor-total-factura" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Usuario registró</label>
                                    <input class="form-control" id="usuario-registro" readonly />
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Fecha de registro</label>
                                    <input class="form-control" id="fecha-registro" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title pull-left">
                            <a data-toggle="collapse" href="#collapse-encabezado">
                                <strong>REGISTRO PAGO CLIENTE</strong>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="collapse-encabezado" class="panel-collapse collapse-encabezado">
                        <div class="panel-body">
                            <div class="form-horizontal small">
                                <div class="col-md-6">
                                    <label class="control-label">Pendiente por pagar:</label>
                                    <input class="form-control" id="pendiente-por-pagar" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">Total pagado:</label>
                                    <input class="form-control" id="valor-total-pagado" readonly />
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(m => m.TipoPagoId, new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.TipoPagoId, Model.ListaTipoPagos, "Seleccione", new { @class = "form-control selectpicker", data_live_search = "true" })
                                    @Html.ValidationMessageFor(m => m.TipoPagoId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    @Html.LabelFor(m => m.FechaPago, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.FechaPago, new { @class = "form-control datepicker" })
                                    @Html.ValidationMessageFor(m => m.FechaPago, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    @Html.LabelFor(m => m.ValorPagado, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.ValorPagado, new { @class = "form-control", onkeyup = "registrarFacturaPagoCliente.CalcularTotalPago(this)", data_format_price = "" })
                                    @Html.ValidationMessageFor(m => m.ValorPagado, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">TOTAL PAGO</label>
                                    <input class="form-control" id="valor-pago" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title pull-left">
                            <a data-toggle="collapse" href="#collapse-encabezado">
                                <strong>DETALLE DESCUENTOS</strong>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="collapse-encabezado" class="panel-collapse collapse-encabezado">
                        <div class="panel-body">
                            <div class="form-horizontal small">

                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.ImpuestoId, new { @class = "control-label" })
                                    @Html.DropDownListFor(m => m.ImpuestoId, Model.ListaImpuestos, "Seleccione", new
                                        {
                                            @class = "form-control selectpicker",
                                            data_live_search = "true",
                                            onchange = "registrarFacturaPagoCliente.OnChangeImpuesto(this, '" + Url.Action("ConsultarDetalleImpuesto", "FacturaCliente", new { Area = "Produccion" }) + "');"
                                        })
                                    @Html.ValidationMessageFor(m => m.ImpuestoId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.ValorIvaFactura, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.ValorIvaFactura, new { @class = "form-control", data_format_price = "" })
                                    @Html.ValidationMessageFor(m => m.ValorIvaFactura, "", new { @class = "text-danger" })
                                </div>

                                <br>
                                <div class="clearfix"></div>
                                <hr />
                                <div class="col-md-12">
                                    <button type="button" onclick="registrarFacturaPagoCliente.AdicionarPresupuesto()" class="btn btn-secondary">
                                        <span class="glyphicon glyphicon-plus">Adicionar</span>
                                    </button>
                                </div>
                                <br>
                                <br>
                                <br>
                                <div class="clearfix"></div>
                                <table id="tabla-datos-impuestos" class="table table-striped table-bordered compact text-center hidden" cellpadding="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Descuento</th>
                                            <th>Valor Descuento</th>
                                            <th>Eliminar</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th colspan="2" style="text-align:right">Total:</th>
                                            <th style="text-align: center"></th>
                                            <th style="text-align: center"></th>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title pull-left">
                            <a data-toggle="collapse" href="#collapse-encabezado">
                                <strong>TOTAL PAGADO</strong>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div id="collapse-encabezado" class="panel-collapse collapse-encabezado">
                        <div class="panel-body">
                            <div class="form-horizontal small">

                                <div class="col-md-4">
                                    <label class="control-label">SUBTOTAL PAGO</label>
                                    <input class="form-control" id="valor-subtotal-pago" readonly />
                                </div>

                                <div class="col-md-4">
                                    <label class="control-label">TOTAL DESCUENTOS</label>
                                    <input class="form-control" id="valor-descuentos" readonly />
                                </div>

                                <div class="col-md-4">
                                    <label class="control-label">VALOR REAL PAGO</label>
                                    <input class="form-control" id="valor-real-pago" readonly />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    @if (Sesion.HasPermission("PRO-FACTURA_PAGO_CLIENTE_CREAR"))
                    {
                        <a class="btn btn-secondary" onclick="registrarFacturaPagoCliente.CrearPagoCliente()">Guardar</a>
                    }
                    <button type="button" class="btn btn-warning" onclick="registrarFacturaPagoCliente.LimpiarCampos()">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
       @*var URL_CONSULTAR_VALORES_FACTURA_CLIENTE = "@Url.Action("ConsultarValoresTotales", "FacturaCliente", new { Area = "Produccion"})";*@
        @*var URL_CONSULTAR_HISTORICO_FACTURA_CLIENTE = "@Url.Action("VerHistorico", "FacturaCliente", new { Area = "Produccion"})";
        var URL_RECHAZAR_FACTURA_CLIENTE = "@Url.Action("Eliminar", "FacturaCliente", new { Area = "Produccion"})";*@
    </script>
}
