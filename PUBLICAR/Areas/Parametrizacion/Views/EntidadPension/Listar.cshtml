@{
    ViewBag.Title = "Entidades de pensión";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaEntidadPension()" />
                </div>
            </form>
        </div>
        @if (Sesion.HasPermission("PAR-ENTIDAD_PENSION_CREAR"))
        {
            <div class="pull-right">
                <a href="@Url.Action("Crear", "EntidadPension", new {Area = "Parametrizacion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-EntidadDePension" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">País</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTA_ENTIDADPENSION = "@Url.Action("Listar", "EntidadPension", new { Area = "Parametrizacion" })";
        var URL_EDITA_ENTIDADPENSION = "@Url.Action("Editar", "EntidadPension", new { Area = "Parametrizacion" })";
        var PERMISO_EDITAR_ENTIDADPENSION = ("@Sesion.HasPermission("PAR-ENTIDAD_PENSION_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Parametrizacion/scripts/EntidadPension/Listar.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/EntidadPension/Crear.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/EntidadPension/Editar.js")
}