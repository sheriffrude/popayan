@{
    ViewBag.Title = "Salario mínimo";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaTipoSalarioMinimo()" />
                </div>
            </form>
        </div>
        @if (Sesion.HasPermission("PAR-TIPO_SALARIO_MINIMO_CREAR"))
        {
            <div class="pull-right">
                <a href="@Url.Action("Crear", "TipoSalarioMinimo", new {Area = "Parametrizacion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-tipo-salario-minimo" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Año</th>
                    <th class="text-center">Valor</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_TIPO_SALARIO_MINIMO = "@Url.Action("Listar", "TipoSalarioMinimo", new { Area = "Parametrizacion" })";
        var URL_EDITAR_TIPO_SALARIO_MINIMO  = "@Url.Action("Editar", "TipoSalarioMinimo", new { Area = "Parametrizacion" })";
        var PERMISO_EDITAR_TIPO_SALARIO_MINIMO = ("@Sesion.HasPermission("PAR-TIPO_SALARIO_MINIMO_EDITAR")" === "True");
    </script>

    @Scripts.Render("~/Areas/Parametrizacion/scripts/TipoSalarioMinimo/Listar.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/TipoSalarioMinimo/Crear.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/TipoSalarioMinimo/Editar.js")
}