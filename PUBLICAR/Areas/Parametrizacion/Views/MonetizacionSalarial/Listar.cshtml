@{
    ViewBag.Title = "Monetización salarial";
}

<div id="listarSalarioIntegralContainer">
    <!--Filtro de la tabla-->
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div id="form-filtro-tabla" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                        <input type="button" class="btn btn-secondary" value="BUSCAR" onclick="ListarMonetizacionSalarial.reconstruirTabla()" />
                        <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ListarMonetizacionSalarial.ResetearTablaPais()" />
                    </div>
                </div>
            </div>
            @*@if (Sesion.HasPermission("PAR-SALARIO-INTEGRAL-CREAR))
                {*@
            <div class="col-md-1 col-md-offset-5">
                <a href="@Url.Action("Crear", "MonetizacionSalarial", new {Area = "Parametrizacion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
            @*}*@
        </div>
    </div>

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <table id="tabla-monetizacion-salarial" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Fecha inicial</th>
                        <th class="text-center">Fecha final</th>
                        <th class="text-center">Resolución</th>
                        <th class="text-center">Valor</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Acción</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Parametrizacion/Scripts/MonetizacionSalarial/Listar.js")

    <script type="text/javascript">
        var urlListar = "@Url.Action("Listar", "MonetizacionSalarial", new { area = "Parametrizacion" })";
        var urlEditar = "@Url.Action("Editar", "MonetizacionSalarial", new { area = "Parametrizacion" })";
    </script>
}

