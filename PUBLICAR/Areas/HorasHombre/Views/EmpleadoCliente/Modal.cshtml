@model  ModalViewModel
@{
    ViewBag.Title = "Detalle Clientes";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    <div class="col-md-12">
        @Html.HiddenFor(m => m.EmpresaModalId)
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <div id="chartContainer_pie2" style="height: 400px; width: 100%;"></div>
        </div>
    </div>
    <div>
        <table id="tabla-Clientes" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Cliente</th>
                    <th class="text-center">Horas</th>
                    <th class="text-center">Porcentaje(%)</th>
                    <th class="text-center">Valor($)</th>
                </tr>
            </thead>
            <tbody align="right"></tbody>
            <tfoot align="right">
                <tr>
                    <th></th>
                    <th class="text-right"><div id="HorasModal"></div></th>
                    <th class="text-right"><div id="SumPorcentModal"></div></th>
                    <th class="text-right"><div id="SumatoriaModal"></div></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>