@model TraficoAdministrativoViewModel
@{
    ViewBag.Title = "Crear solicitud de tráfico administrativo";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Crear", "TraficoAdministrativo", new { Area = "Trafico" },
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnBegin="OnBeginCrearAprobacion",
                    OnSuccess= "OnSuccessFormCrearSolicitud"  
                },
                new { @class = "", role = "form" }))
    {

        @Html.AntiForgeryToken()

        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })

        <div class="col-md-6">
            @Html.LabelFor(m => m.DeptoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.DeptoId, Model.ListaDeptos, "Seleccione",
                new
                {
                    @class = "form-control",
                    onchange = "OnchangeDepto(this, '" + Url.Action("ListarTiposSolicitudes", "TraficoAdministrativo", new { Area = "Trafico" }) + "');"
                })
            @Html.ValidationMessageFor(m => m.DeptoId, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.Responsable, new { @class = "control-label" })
            <ul class="list-group" id="ListaDirectores"></ul>
            <br />
        </div>

        <div class="clearfix"></div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.Titulo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Titulo, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.FechaTrabajo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaTrabajo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FechaTrabajo, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.TipoRequerimiento, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TipoRequerimiento, Model.ListaSolicitudes, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.TipoRequerimiento, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>
        <div class="col-md-12">
            @Html.LabelFor(m => m.Observacion, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Observacion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Observacion, "", new { @class = "text-danger" })
        </div>       
        <div class="clearfix"></div>
        <br />

        <div class="col-md-12 " id="file">
            <input type="file" id="uploadFile" onchange="SubirArchivo(this)" />
        </div>
        <div class="clearfix"></div>

        <div class="col-md-12 hidden" id="Contenedor_Archivos">
            <table id="tabla-Archivos" class="table table-striped table-bordered compact text-center " cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center"></th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="clearfix"></div>
        <br />
        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>

