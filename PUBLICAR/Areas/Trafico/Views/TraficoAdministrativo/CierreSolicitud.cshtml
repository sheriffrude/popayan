@model CierreSolicitudViewModel
@{
    ViewBag.Title = "Terminar Solicitud de tráfico adminstrativo #";
    ViewBag.BodyClass = "body-background-gray";
}

<!-- Titulo y boton volver -->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title @ViewBag.IdSolicitud</h4>
</div>
<div class="modal-body">

    <!--Espacio vertical-->
    <div class="help-block"></div>

    <!--Formulario-->
    @using (Ajax.BeginForm("CierreSolicitud", "TraficoAdministrativo", new { Area = "Trafico" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnBegin = "OnBeginCierreSolicitud",
            OnSuccess = "OnCompleteCierreSolicitud"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.SolicitudId)

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Observacion, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Observacion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Observacion, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.CalificacionId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.CalificacionId, Model.ListaCalificacion, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.CalificacionId, "", new { @class = "text-danger" })
        </div>
        <div class="clearfix"></div>
        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
        <div class="clearfix"></div>

    }
</div>