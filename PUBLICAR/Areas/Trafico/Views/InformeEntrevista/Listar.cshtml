@model InformeEntrevistaViewModel
@{
    ViewBag.Title = "Informes de reunión";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    <div class="pull-right">
        @if (Sesion.HasPermission("TRA-INFORME_ENTREVISTA_CREAR"))
        {
            <a href="@Url.Action("Crear", "InformeEntrevista", new { Area = "Trafico", id = Model.OrdenTrabajoId })" data-toggle="modal" data-target="#" data-execute-onload="INFORME_REUNION_CREAR.OnLoad" data-size="all" class="btn btn-warning">
                @*<img src="@Url.Content("~/Content/images/Trafico/Trafico/nuevo_informe.png")" alt="" />*@
                Crear informe
            </a>
        }
    </div>
    
    @Html.HiddenFor(m => m.OrdenTrabajoId)
    <table id="tabla_infomes_reunion" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th>Orden de trabajo</th>
                <th>Tipo</th>
                <th>Tipo de Reunión</th>
                <th>Fecha</th>
                <th>Hora inicio</th>
                <th>Hora fin</th>
                <th>Fecha de creación</th>
                <th>Motivo</th>
                <th>Responsable</th>
                <th>Descargar</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>