@model OrdenTrabajoListarHistorialCambiosViewModel
@{
    ViewBag.Title = $"Historial de cambios de la orden de trabajo {Model.Codigo}";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title"> @ViewBag.Title</h4>
</div>

<div class="modal-body">
    <div class="col-md-12">
        @Html.HiddenFor(m => m.OrdenTrabajoId)
        <table id="tabla_orden_trabajo_historial_cambios" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Referencia</th>
                    <th class="text-center">Descripción</th>
                    <th class="text-center">Director</th>
                    <th class="text-center">Ejecutivo</th>
                    <th class="text-center">Productor ejecutivo</th>
                    <th class="text-center">Observaciones</th>
                    <th class="text-center">Persona que realizo la modificación</th>
                    <th class="text-center">Fecha y hora modificación</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-md-12 text-right">
        <a href="@Url.Action("Consultar", "OrdenTrabajo", new { Area = "Trafico", id = Model.OrdenTrabajoId })" class="btn btn-secondary" data-toggle="modal" data-target="#" data-size="lg">
            Volver
        </a>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
    </div>
    <div class="clearfix"></div>
</div>