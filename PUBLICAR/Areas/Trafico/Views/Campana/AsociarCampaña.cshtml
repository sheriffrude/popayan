
@model AsociarCampanaVierModel

@{
    ViewBag.Title = "Asociar Campaña";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("AsociarCampana", "Campana", new { Area = "Trafico" },
                                        new AjaxOptions
                                        {
                                            HttpMethod = "POST",
                                            OnBegin = "OnBeginCreearAsociacion",
                                            OnSuccess = "OnSuccessCrearAsociacion"
                                        },
                        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.AsociarEmpresaId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.AsociarEmpresaId, Model.ListaEmpresas, "Seleccione", new { @class = "form-control", onchange = "OnchangeAsociarEmpresa(this)" })
            @Html.ValidationMessageFor(m => m.AsociarEmpresaId, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="select-style">
                <label for="AsociarClienteId">Seleccione un Cliente:</label>
                <select id="AsociarClienteId" class="form-control" onchange="OnchangeCliente(this)"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="select-style">
                <label for="AsociarCampanaId">Seleccione una campaña:</label>
                <select id="AsociarCampanaId" class="form-control"></select>
            </div>
        </div>

        <!--Filtro de la tabla-->
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-left">
                      
                            <div class="form-group">
                                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                                <input type="button" class="btn btn-asociar" value="BUSCAR" onclick="ConstruirTablaOt()" />
                            </div>
                       
                    </div>
                </div>
            </div>

            <!--Tabla-->
            <div class="row">
                <div class="col-md-12">
                    <table id="tabla-asociar-campana" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th class="text-center">Ejecutivo</th>
                                <th class="text-center">Número Ot </th>
                                <th class="text-center">REFERENCIA</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

              <!--Tabla-->
            <div class="row">
                <div class="col-md-12">
                    <table id="tabla-ot_seleccionada" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th class="text-center">Número Ot </th>
                                <th class="text-center">REFERENCIA</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>


        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>