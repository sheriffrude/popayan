@model TraficoClienteCrearResponsableViewModel
@{
    ViewBag.Title = "Nuevo Responsable #";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title @ViewBag.IdSolicitud</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("CrearResponsable", "TraficoCliente", new { Area = "Trafico" },
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnBegin = "OnBeginCrearStatus",
                    OnSuccess = "OnSuccessCrearStatus"
                },
                new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IdSolicitud)
        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.UsuarioId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.UsuarioId, Model.Nombre, "Seleccione", new { @class = "form-control selectpicker", data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.UsuarioId, "", new { @class = "text-danger" })
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
