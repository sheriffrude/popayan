@{
    Layout = "layout";
    ViewBag.Title = "Tiene una nueva Tarea (Asignado)";
}

<p><strong>Orden de trabajo: </strong>@Model.OrdenTrabajoCodigo</p>
<p><strong>Número de Tarea: </strong>@Model.Numero</p>
<p><strong>Título: </strong>@Model.Titulo</p>
<p><strong>Desripción: </strong>@Model.Descripcion</p>
<p><strong>Fecha de entrega: </strong>@Model.FechaEntrega</p>
<p><strong>Hora de entrega: </strong>@Model.HoraEntrega</p>
<p><strong>Empresa: </strong>@Model.Empresa</p>
<p><strong>Cliente: </strong>@Model.Cliente</p>
<p><strong>Producto: </strong>@Model.Producto</p>
<p><strong>Enviado por: </strong>@Model.EnviadoPor</p>
<p><strong>Fecha y Hora de la solicitud: </strong>@Model.FechaHora</p>

<table style="width: 100%">
    <tr>
        <td align="center">
            <p style="font-size: 16px; font-weight: normal; margin: 0; text-aling: center;">
                <a href="@Model.Link" class="button" style="display: inline-block; color: white; background: #005661; border: solid #005661; border-width: 10px 20px 8px; font-weight: bold; border-radius: 4px;text-decoration: none;">Ver tarea</a>
            </p>
        </td>
    </tr>
</table>