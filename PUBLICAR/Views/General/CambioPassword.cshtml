@model CambioPass
@{
    ViewBag.Title = "Cambio de Contraseña";
}

<h2>Ingrese Su Nueva Contraseñas</h2>
<br />
<br />
@using (Html.BeginForm("RestablecerPassword", "General", FormMethod.Post))
{
    <div class="row">
        @Html.AntiForgeryToken()
        <div class="form-group col-lg-12">
            <div class="form-group col-lg-3">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ingrese la Nueva Contraseña" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-lg-12">
            <div class="form-group col-lg-3">
                @Html.PasswordFor(m => m.ConfirmarPassword, new { @class = "form-control", @placeholder = "Confirme la Nueva Contraseña" })
                @Html.ValidationMessageFor(m => m.ConfirmarPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-lg-12">
            <div class="form-group">
                <button type="submit" onclick="cambioPass" class="btn btn-default">Entrar</button>
            </div>
        </div>
    </div>
}

