@model VerificarRestablecerPasswordViewModel
@{
    ViewBag.Title = "Restablecer Contraseña";
    Layout = "~/Views/Shared/_LayoutControlAcceso.cshtml";
}

<div class="row">
    <img src="@Url.Content("~/Content/images/ControlAcceso/logo-process-plus.png")" alt="logo-process" class="img-responsive" />
</div>
<div class="row">
    @using (Html.BeginForm("VerificarRestablecerPassword", "ControlAcceso", new { codigo = Model.Codigo },
        FormMethod.Post,
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(true)

        <h2>Restablecer contraseña</h2>

        @Html.HiddenFor(m => m.Codigo)
        
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ingrese la Nueva Contraseña" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmarPassword, new { @class = "form-control", @placeholder = "Confirme la Nueva Contraseña" })
            @Html.ValidationMessageFor(m => m.ConfirmarPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-default">Entrar</button>
        </div>
        <div class="form-group">
            <a href="@Url.Action("IniciarSesion", "ControlAcceso")">Iniciar Sesión</a>
        </div>
        <div class="form-group">
            <a href="@Url.Action("RestablecerPassword", "ControlAcceso")">Restablecer Contraseña</a>
        </div>
    }
</div>