@model TareaResponderViewModel
@{
    ViewBag.Title = "Responder tarea # " + Model.Numero;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Responder", "Tarea", new { Area = "Trafico" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnBegin = "TAREA_RESPONDER.OnBegin",
            OnComplete = "TAREA_RESPONDER.OnComplete"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        @Html.HiddenFor(m => m.Id)

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.DepartamentoTraficoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.DepartamentoTraficoId, Model.ListaDepartamentosTrafico, "Seleccione", new { @class = "form-control selectpicker", data_live_search = true, onchange = "TAREA_RESPONDER.OnChangeDepartamentoTraficoId(this)" })
            @Html.ValidationMessageFor(m => m.DepartamentoTraficoId, "", new { @class = "text-danger" })
        </div>

        if (Sesion.HasPermission("TRA-TAREA_APROBACION_PRESUPUESTO"))
        {
            <div class="form-group col-md-3">
                @Html.LabelFor(m => m.AprobarPresupuestoCliente, new {@class = "control-label"})
                @Html.CheckBoxFor(m => m.AprobarPresupuestoCliente, new {onchange = "TAREA_RESPONDER.OnChangeAprobarPresupuesto(this)", data_toggle = "toggle", data_onstyle = "success", data_offstyle = "danger", data_size = "mini"})
                @Html.ValidationMessageFor(m => m.AprobarPresupuestoCliente, "", new {@class = "text-danger"})
            </div>
            <div id="container_presupuestos" class="form-group col-md-3" hidden>
                @Html.LabelFor(m => m.PresupuestoId, new {@class = "control-label"})
                @Html.DropDownListFor(m => m.PresupuestoId, Model.ListaPresupuestos, null, new {@class = "form-control selectpicker"})
                @Html.ValidationMessageFor(m => m.PresupuestoId, "", new {@class = "text-danger"})
            </div>
        }
        <div class="clearfix"></div>

        <div class="form-group col-md-6">
            <label class="control-label">Responsable(s)</label>
            <table id="tabla_responsables" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">Nombre</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div class="form-group col-md-6">
            <label class="control-label">Asignado(s)</label>
            <table id="tabla_asignados" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">Nombre</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div class="clearfix"></div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.FechaEntrega, new { @class = "control-label" })
            <div class="input-group date">
                @Html.TextBoxFor(m => m.FechaEntrega, new { @class = "form-control datepicker" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.FechaEntrega, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.HoraEntrega, new { @class = "control-label" })
            <div class="input-group date">
                @Html.TextBoxFor(m => m.HoraEntrega, new { @class = "form-control input-small" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.HoraEntrega, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.TipoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TipoId, new List<SelectListItem>(), "Seleccione", new { @class = "form-control selectpicker", data_live_search = true, onchange = "TAREA_RESPONDER.OnChangeTipoId(this)" })
            @Html.ValidationMessageFor(m => m.TipoId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6" id="container-presupuestos" hidden>
            <label class="control-label">Presupuesto(s)</label>
            <table id="tabla-Presupuestos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">Nombre</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Titulo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Titulo, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Descripcion, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>
        <div class="ln_solid"></div>

        <div class="form-group col-md-6">
            <label class="control-label">Adjuntar archivo</label>
            <input type="file" id="uploadFile" multiple="multiple" class="form-control" onchange="TAREA_RESPONDER.UploadFile(this)" />
        </div>
        <div class="form-group col-md-12">
            <label class="control-label">Archivo(s)</label>
            <table id="tabla_archivos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        if (Sesion.HasPermission("TRA-TAREA_PIEZA_ARTE_CREAR"))
        {
            <div class="clearfix"></div>
            <div class="ln_solid"></div>
            <div class="form-group col-md-5">
                @Html.LabelFor(m => m.PiezaArteId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.PiezaArteId, Model.ListaTiposPiezasArte, "Seleccione", new { @class = "form-control selectpicker", data_live_search = true })
                @Html.ValidationMessageFor(m => m.PiezaArteId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(m => m.CantidadPiezaArte, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.CantidadPiezaArte, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CantidadPiezaArte, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                <button type="button" class="btn btn-secondary" onclick="TAREA_RESPONDER.AdicionarPiezaArte()">Adicionar</button>
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Pieza(s) de arte</label>
                <table id="tabla_piezas_finales" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th class="text-center">Pieza de Arte</th>
                            <th class="text-center">Total</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        }

        <div class="clearfix"></div>

        <div class="col-md-12 text-right">
            <a href="@Url.Action("Consultar", "Tarea", new { Area = "Trafico", id = Model.Id })" class="btn btn-secondary" data-toggle="modal" data-target="#" data-size="lg" data-execute-onload="TAREA_CONSULTAR.OnLoad">Volver</a>
            <button type="submit" class="btn btn-success">Responder</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
<div class="clearfix"></div>