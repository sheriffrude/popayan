@model TareaListarCambiosFechaHoraEntregaViewModel
@{
    ViewBag.Title = $"Historial Status cliente - Tarea # {Model.Numero}";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title"> @ViewBag.Title</h4>
</div>

<div class="modal-body">
    @if (Sesion.HasPermission("TRA-TAREA_STATUS_CLIENTE_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("CrearStatusCliente", "Tarea", new { Area = "Trafico", id = Model.TareaId })" class="btn btn-secondary" data-toggle="modal" data-target="#" data-execute-onload="TAREA_STATUS_CLIENTE_CREAR.OnLoad">Crear Status</a>
        </div>
    }
    <div class="col-md-12">
        @Html.HiddenFor(m => m.TareaId)
        <table id="tabla_tarea_lista_status_cliente" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Status cliente</th>
                    <th class="text-center">Fecha entrega</th>
                    <th class="text-center">Observaciones</th>
                    <th class="text-center">Usuario</th>
                    <th class="text-center">Fecha y hora</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-md-12 text-right">
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
    </div>
    <div class="clearfix"></div>
</div>