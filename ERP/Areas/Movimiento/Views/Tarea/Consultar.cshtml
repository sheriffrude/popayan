@model TareaConsultarViewModel
@{
    ViewBag.Title = "Tarea # " + Model.Numero;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    <div class="clearfix"></div>
    @Html.HiddenFor(m => m.Id)

    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.OrdenTrabajo, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.OrdenTrabajo, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Estado, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    @if (Model.PresupuestoId != null)
    {
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.PresupuestoId, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PresupuestoId, "", new { @class = "form-control", @readonly = "readonly" })
        </div>
    }
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.TipoTarea, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.TipoTarea, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Titulo, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Titulo, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Descripcion, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.DepartamentoTrafico, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.DepartamentoTrafico, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-8">
        @Html.LabelFor(m => m.EnviadaPor, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.EnviadaPor, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.FechaEntrega, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FechaEntrega, "", new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.HoraEntrega, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.HoraEntrega, "", new { @class = "form-control", @readonly = "readonly" })
        <a href="@Url.Action("ListarCambiosFechaHoraEntrega", "Tarea", new { Area = "Trafico", id = Model.Id })" class="btn btn-secondary" data-toggle="modal" data-target="#" data-size="lg" data-execute-onload="TAREA_LISTAR_CAMBIO_FECHA_HORA_ENTREGA.OnLoad">Historial</a>
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.FechaHoraCreacion, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FechaHoraCreacion, "", new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="clearfix"></div>
    <div class="ln_solid"></div>

    @if (Model.EstadoId == TraficoCustom.EstadoTarea.SinResponder.GetHashCode()
                                || Model.EstadoId == TraficoCustom.EstadoTarea.Contestada.GetHashCode())
    {
        <div class="form-group col-md-6">
            <table id="tabla_responsables_consultar_tarea" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>Responsable(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Usuarios != null)
                    {
                        foreach (var item in Model.Usuarios)
                        {
                            if (item.TipoAsignacionId == 1)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                </tr>
                            }
                        }
                    }
                </tbody>

            </table>
        </div>
        <div class="form-group col-md-6">
            <table id="tabla_asignados_consultar_tarea" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>Asignado(s)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Usuarios != null)
                    {
                        foreach (var item in Model.Usuarios)
                        {
                            if (item.TipoAsignacionId == 2)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="clearfix"></div>
        <div class="form-group col-md-12">
            <table id="tabla_archivos_consultar_tarea" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th>Archivo(s)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Archivos != null)
                    {
                        foreach (var archivo in Model.Archivos)
                        {
                            <tr>
                                <td>@archivo.Nombre</td>
                                <td>
                                    <button class="btn btn-secondary" onclick="TAREA_CONSULTAR.Preview('@Url.Content(archivo.Path)')">ver</button>
                                </td>
                                <td><a href="@Url.Content(archivo.Path)" target="_blank" class="btn btn-secondary">Descargar</a>
                            </tr>
                        }


                    }


                </tbody>
            </table>
        </div>
        <div>
            @if (Model.ArchivosCount > 2)
            {
                <div class="form-control col-md-12">
                    <a href="/Trafico/Tarea/DescargarArchivos/@Model.Id" target="_blank" class="btn btn-warning">Descargar Todo</a>
                </div>
            }
        </div>
        if (Model.PiezasArte != null)
        {
            <div class="clearfix"></div>
            <div class="form-group col-md-12">
                <table id="tabla_piezas_arte_consultar_tarea" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th>Pieza(s) de arte</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var piezaArte in Model.PiezasArte)
                        {
                            <tr>
                                <td>@piezaArte.PiezaArte</td>
                                <td>@piezaArte.Cantidad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    }

    @if (Model.EstadoId == TraficoCustom.EstadoTarea.Cancelada.GetHashCode())
    {
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.FechaHoraCancelacion, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaHoraCancelacion, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.ObservacionesCancelacion, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.ObservacionesCancelacion, new { @class = "form-control", @readonly = "readonly" })
        </div>
    }

    @if (Model.EstadoId == TraficoCustom.EstadoTarea.Finalizada.GetHashCode())
    {
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.FechaHoraFinalizacion, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaHoraFinalizacion, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.ObservacionesFinalizacion, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.ObservacionesFinalizacion, new { @class = "form-control", @readonly = "readonly" })
        </div>
    }

    <div class="clearfix"></div>

    <div class="form-group text-left">
        @if (Model.EstadoId == TraficoCustom.EstadoTarea.SinResponder.GetHashCode())
        {
            if (Sesion.HasPermission("TRA-TAREA_CANCELAR") && Model.Editar)
            {
                <a href="@Url.Action("Cancelar", "Tarea", new { Area = "Trafico", id = Model.Id })" data-toggle="modal" data-target="#" class="btn btn-danger" data-size="lg">Cancelar Tareas</a>
            }
        }
    </div>

    <div class="form-group text-right">
        @if (Model.EstadoId == TraficoCustom.EstadoTarea.SinResponder.GetHashCode())
        {
            if (Sesion.HasPermission("TRA-TAREA_RESPONDER") && Model.Responder)
            {
                <a href="@Url.Action("Responder", "Tarea", new { Area = "Trafico", id = Model.Id })" data-toggle="modal" data-target="#" class="btn btn-secondary" data-size="lg" data-execute-onload="TAREA_RESPONDER.OnLoad">Responder</a>
            }
            if (Sesion.HasPermission("TRA-TAREA_FINALIZAR") && Model.Finalizar)
            {
                <a href="@Url.Action("Finalizar", "Tarea", new { Area = "Trafico", id = Model.Id })" data-toggle="modal" data-target="#" class="btn btn-secondary" data-size="lg">Finalizar</a>
            }
            if (Sesion.HasPermission("TRA-TAREA_EDITAR") && Model.EnviadaPorId == Sesion.GetId())
            {
                <a href="@Url.Action("EditarFechaHoraEntrega", "Tarea", new { Area = "Trafico", id = Model.Id, onchange = "TAREA_EDITAR_FECHA_HORA_ENTREGA.OnChangeUsuarios(this)"})" data-toggle="modal" data-target="#" class="btn btn-secondary" data-size="lg" data-execute-onload="TAREA_EDITAR_FECHA_HORA_ENTREGA.OnLoad">Editar Asignados y Fechas</a>
            }
        }
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
    </div>

</div>
<div class="clearfix"></div>