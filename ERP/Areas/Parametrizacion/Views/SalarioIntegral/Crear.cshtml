@model ProcessPlusERP.Areas.Parametrizacion.Models.SalarioIntegral.RegistroSalarioIntegralViewModel

@{
    ViewBag.Title = "Crear Salario integral";
}

<script type="text/javascript" src="~/Areas/Parametrizacion/Scripts/SalarioIntegral/Crear.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="modal-body">
        
    @using (Ajax.BeginForm("Crear", "SalarioIntegral", new AjaxOptions { HttpMethod = "POST", OnComplete = "CrearSalarioIntegral.onComplete" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            @Html.ValidationMessage("Success", new { @class = "text-success" })
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.Periodo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Periodo, new { @class = "form-control", placeholder="YYYY"})
            @Html.ValidationMessageFor(m => m.Periodo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Anio, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Anio, new { @class = "form-control", placeholder = "Año en el que el salario integral tendrá vigencia", @readOnly = true })            
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Valor, new { @class = "form-control",  placeholder="Valor del salario" })
            @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success" id="guardar" name="guardar">GUARDAR</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">CERRAR</button>
        </div>
    }
</div>

<script type="text/javascript">
    CrearSalarioIntegral.init();
</script>
