@{
    ViewBag.Title = "Impuestos y Tarifas";
}

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaImpuesto()" />
            </div>
        </form>
    </div>
    <div class="col-md-2 text-right">
        @if (Sesion.HasPermission("PAR-IMPUESTO_CREAR"))
        {
            <a href="@Url.Action("Crear", "Impuesto", new {Area = "Parametrizacion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-impuesto" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Pais</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Porcentaje</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_IMPUESTO = "@Url.Action("Listar", "Impuesto", new { Area = "Parametrizacion" })";
        var URL_EDITAR_IMPUESTO = "@Url.Action("Editar", "Impuesto", new { Area = "Parametrizacion" })";
        var PERMISO_EDITAR_IMPUESTO = ("@Sesion.HasPermission("PAR-IMPUESTO_EDITAR")" === "True");
    </script>

    @Scripts.Render("~/Areas/Parametrizacion/scripts/Impuesto/Listar.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/Impuesto/Crear.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/Impuesto/Editar.js")
}