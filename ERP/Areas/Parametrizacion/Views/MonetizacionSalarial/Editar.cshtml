@model RegistroMonetizacionSalarialViewModel

@{
    ViewBag.Title = "Editar monetización salarial";
}

<script type="text/javascript" src="~/Areas/Parametrizacion/Scripts/MonetizacionSalarial/Crear.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("Editar", "MonetizacionSalarial", new AjaxOptions { HttpMethod = "POST", OnComplete = "CrearMonetizacionSalarial.onComplete" }, new { id = "crearMonetizacionForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaInicial, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaInicial, new { @class = "form-control", placeholder = "DD/MM/YYYY" })
            @Html.ValidationMessageFor(m => m.FechaInicial, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaFinal, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaFinal, new { @class = "form-control", placeholder = "DD/MM/YYYY" })
            @Html.ValidationMessageFor(m => m.FechaFinal, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Resolucion, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Resolucion, new { @class = "form-control", placeholder = "Resolución de la monetización" })
            @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", placeholder = "Valor del salario" })
            @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, false)
                    Desactivar
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, true)
                    Activar
                </label>
            </div>
            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success" id="guardar" name="guardar">Actualizar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">CERRAR</button>
        </div>
    }
</div>

<script type="text/javascript">
    CrearMonetizacionSalarial.init();
</script>

