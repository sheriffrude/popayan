@model CrearRolViewModel
@{
    ViewBag.Title = "Crear Rol";
}
@Styles.Render("~/bundles/dist/convined/gijgo.mins.css")
<div class="row">
    <div class="col-md-12">
        @using (Ajax.BeginForm("Crear", "Rol", new { Area = "Parametrizacion" },
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnBegin = "RolCrear.OnBegin",
                    OnComplete = "RolCrear.OnComplete"
                },
                new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>
        <div class="col-md-6">
            <label class="control-label">Permisos Parametrización</label>
            <div id="contenedor_permisos_parametrizacion"></div>
        </div>
        <div class="col-md-6">
            <label class="control-label">Permisos Gestion</label>
            <div id="contenedor_permisos_gestion"><h3>Permisos Gestión</h3></div>
        </div>
        <div class="col-md-6">
            <label class="control-label">Permisos Tráfico</label>
            <div id="contenedor_permisos_trafico"></div>
        </div>
        <div class="col-md-6">
            <label class="control-label">Permisos Horas Hombre</label>
            <div id="contenedor_permisos_hoh"></div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6">
            <label class="control-label">Permisos Producción</label>
            <div id="contenedor_permisos_produccion"></div>
        </div>
        <div class="col-md-6">
            <label class="control-label">Permisos Reportes</label>
            <div id="contenedor_permisos_reportes"></div>
        </div>

        <div class="clearfix"></div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="@Url.Action("Listar", "Rol", new { Area = "Parametrizacion" })" class="btn btn-warning">Cancelar</a>
        </div>
}
    </div>
</div>

@Styles.Render("~/bundles/gijgo.css")
@section Scripts{
    <script>
        var URL_PERMISOS_POR_MODULO_LISTAR = "@Url.Action("ListarPorModulo", "Permiso", new { Area = "Parametrizacion" })";
        var URL_ROL_LISTAR = "@Url.Action("Listar", "Rol", new { Area = "Parametrizacion" })";
    </script>

    @Scripts.Render("~/bundles/gijgo.js")
    @Scripts.Render("~/Areas/Parametrizacion/scripts/Rol/Crear.js")
}