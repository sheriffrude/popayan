@model  CrearActividadViewModel
@{
    ViewBag.Title = "Registrar actividad";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Crear", "Actividad", new { Area = "HorasHombre" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnBegin = "OnBeginCrearActividad",
            OnSuccess = "OnSuccessCrearActividad"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger col-md-12" })
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        
        @Html.HiddenFor(m => m.ClienteId)
        @Html.HiddenFor(m => m.OtId)

        <div class="clearfix"></div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.TipoRegistroId, new { @class = "control-label" })
            <div class="clearfix" />
            <div class="radio-inline">
                <label>
                    @Html.RadioButtonFor(m => m.TipoRegistroId, HorasHombreCustom.TiposRegistro.Agencia.GetHashCode(), new { @checked = true })
                    @HorasHombreCustom.TiposRegistro.Agencia.ToString()
                </label>
            </div>
            <div class="radio-inline">
                <label>
                    @Html.RadioButtonFor(m => m.TipoRegistroId, HorasHombreCustom.TiposRegistro.Cliente.GetHashCode())
                    @HorasHombreCustom.TiposRegistro.Cliente.ToString()
                </label>
            </div>
            @Html.ValidationMessageFor(m => m.TipoRegistroId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EmpresaId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.EmpresaId, Model.ListaEmpresas, null,
                new
                {
                    @class = "selectpicker form-control",
                    data_live_search = "true",
                    onchange = "OnChangeEmpresa(this, '" + Url.Action("ClientesPorEmpresa", "Actividad", new { Area = "HorasHombre" }) + "');"
                })
            @Html.ValidationMessageFor(m => m.EmpresaId, "", new { @class = "text-danger" })
        </div>

        <!--Contenedor tipo de registro CLIENTE-->
        <div id="contenedor_tipo_registro_cliente" class="hide">
            <div class="form-group">
                @Html.LabelFor(m => m.ClienteId, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Cliente, new { @class = "form-control cliente" })
                @Html.ValidationMessageFor(m => m.ClienteId, "", new { @class = "text-danger" })
            </div>

            <hr />

            <div id="contenedor_ot" class="hide">
                @Html.LabelFor(m => m.OtId, new { @class = "control-label" })
                <!--Cotenedor Filtro OT-->
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.AnioOt, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.AnioOt, Model.ListaAniosOt, null, new { @class = "selectpicker form-control", data_live_search = "true" })
                        @Html.ValidationMessageFor(m => m.AnioOt, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.EstadoOtId, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.EstadoOtId, Model.ListaEstadosOt, null, new { @class = "selectpicker form-control", })
                        @Html.ValidationMessageFor(m => m.EstadoOtId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-8 text-left">
                        <label class="control-label">FILTRO</label>
                        <div id="form-filtro-tabla" class="form-inline">
                            <div class="form-group">
                                <input type="search" name="input-filtro-ot" id="input-filtro-ot" class="form-control" placeholder="Filtro" />
                                <input type="button" class="btn btn-horashombre" value="BUSCAR" onclick="ListarOtsPorCliente()" />
                                <input type="button" class="btn btn-horashombre" value="VER TODO" onclick="ResetearFiltroTablaOt()" />
                            </div>
                        </div>
                    </div>
                </div>

                <!--Tabla OTs-->
                <div id="contenedor_tabla_ot">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="tabla_ot" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="text-center">Código</th>
                                        <th class="text-center">Referencia</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!--Contenerdor Presupuestos-->
                <div id="contenedor_presupuestos" class="form-group hidden">
                    @Html.LabelFor(m => m.PresupuestoId, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.PresupuestoId, new List<SelectListItem>(), null, new { @class = "form-control selectpicker", data_live_search = "true", })
                </div>
            </div>
        </div>
        <!--// Contenedor tipo de registro CLIENTE-->

        <div class="form-group col-md-4 padding-left-0">
            @Html.LabelFor(m => m.Fecha, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.HoraInicio, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.HoraInicio, Model.ListaHorasInicio, null, new { @class = "form-control selectpicker", data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.HoraInicio, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-4 padding-right-0">
            @Html.LabelFor(m => m.HoraFin, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.HoraFin, Model.ListaHorasFin, null, new { @class = "form-control selectpicker", data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.HoraFin, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TipoActividadId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TipoActividadId, Model.ListaTiposActividades, "Seleccione", new { @class = "form-control selectpicker", data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.TipoActividadId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Observaciones, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Observaciones, new { @class = "form-control", })
            @Html.ValidationMessageFor(m => m.Observaciones, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>