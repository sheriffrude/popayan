@model EmpleadoClienteViewModel
@{
    ViewBag.Title = "EMPLEADOS VS CLIENTE/PROYECTOS";
}
<!-- Titulo y boton volver -->
<div class="row">
    <div class="col-md-10 text-left">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col-md-2 text-right">
        <a href="@Url.Action("Menu", "Reporte", new { Area = "HorasHombre"} )">
            <img src="@Url.Content("~/Content/images/boton-regresar-menu.png")" alt="" />
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.LabelFor(m => m.EmpresaId, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.EmpresaId, Model.ListaEmpresas, "Seleccione", new { @class = "form-control",
       onchange = "RecargarTabla()"})
        @Html.ValidationMessageFor(m => m.EmpresaId, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-6"></div>

    <div class="col-md-6">
        @Html.LabelFor(m => m.FechaInicio, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FechaInicio, new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-6">
        @Html.LabelFor(m => m.FechaFin, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FechaFin, new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger" })
    </div>

    <!--Filtro de la tabla-->
    <div class="row margin-top-1">
        <div class="col-md-10 text-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-default" value="BUSCAR" />
                </div>
            </form>
        </div>
    </div>

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <table id="tabla-cliente" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th width="10"></th>
                        <th align="right">Nombre</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>


    <!-- tabla ots -->
    <div class="row">
        <div class="col-md-6">
            <div class="row margin-top-1">
                <div class="col-md-6 text-left">
                    <form id="form-filtro-tabla" class="form-inline">
                        <div class="form-group">
                            <input type="search" name="input-filtro-ot" id="input-filtro-ot" class="form-control" placeholder="Filtro" />
                            <input type="submit" class="btn btn-default" value="BUSCAR" />
                        </div>
                    </form>
                </div>
            </div>
            <table id="tabla-ot" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th width="10"></th>
                        <th align="right">OT</th>
                        <th align="right">Referencia</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    <!-- tabla empleados -->
    <div class="col-md-6">
            <div class="row margin-top-1">
                <div class="col-md-6 text-left">
                    <form id="form-filtro-tabla" class="form-inline">
                        <div class="form-group">
                            <input type="search" name="input-filtro-empleado" id="input-filtro-empleado" class="form-control" placeholder="Filtro" />
                            <input type="submit" class="btn btn-default" value="BUSCAR" />
                        </div>
                    </form>
                </div>
            </div>

            <table id="tabla-usuario" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th width="10"></th>
                        <th align="right">Nombre</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <a href="@Url.Action("Listar", "Empresa", new { Area = "Gestion" } )" class="btn">
            <img src="@Url.Content("~/Content/images/HorasHombre/boton-cancelar-min.png")" alt="" />
        </a>
        <input type="image" src="@Url.Content("~/Content/images/HorasHombre/boton-generar-min.png")" class="btn" value="Guardar" onclick="Generar_Reportes()" />
    </div>



</div>

@Styles.Render("~/bundles/dataTables.css")


