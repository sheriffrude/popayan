    <script type="text/javascript">
        var URL_CLIENTE = "@Url.Action("Clientes", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_OT = "@Url.Action("Ot", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_USUARIO = "@Url.Action("Usuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        //VISTA Y REPORTES DE CLIENTE
        var URL_REPORTE_CLIENTE = "@Url.Action("ReporteModalCliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_BARRAS_CLIENTE = "@Url.Action("ReporteBarrasCliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_PIE_CLIENTE = "@Url.Action("ReportePieCliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_TABLA_CLIENTE = "@Url.Action("ReporteTablaCliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        //VISTA Y REPORTES DE OT
        var URL_REPORTE_OT = "@Url.Action("ReporteModalOT", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_BARRAS_OT = "@Url.Action("ReporteBarrasOt", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_PIE_OT = "@Url.Action("ReportePieOt", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_TABLA_OT = "@Url.Action("ReporteTablaOt", "EmpleadoCliente", new { Area = "HorasHombre"})";
        //VISTA Y REPORTES DE USUARIO
        var URL_REPORTE_USUARIO = "@Url.Action("ReporteModalUsuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_BARRAS_USUARIO = "@Url.Action("ReporteBarrasUsuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_PIE_USUARIO = "@Url.Action("ReportePieUsuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_TABLA_USUARIO = "@Url.Action("ReporteTablaUsuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        //VISTA Y RESPORTES _USUARIO_CLIENTE
        var URL_REPORTE_USUARIO_CLIENTE = "@Url.Action("ReporteModalUsuario_Cliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_BARRAS_USUARIO_CLIENTE = "@Url.Action("ReporteBarrasUsuario_Cliente", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_DIAGRAMA_PIE_USUARIO_CLIENTE = "@Url.Action("ReportePieCliente_Usuario", "EmpleadoCliente", new { Area = "HorasHombre"})";
        var URL_REPORTE_TABLA_USUARIO_CLIENTE = "@Url.Action("ReporteTabla_Usuario_Cliente", "EmpleadoCliente", new { Area = "HorasHombre"})";

    </script>
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/bundles/canvasjs")
    @Scripts.Render("~/Areas/HorasHombre/scripts/EmpleadoCliente/Listar.js")
    @Scripts.Render("~/Areas/HorasHombre/scripts/EmpleadoCliente/ReportesCliente.js")
    @Scripts.Render("~/Areas/HorasHombre/scripts/EmpleadoCliente/ReportesOt.js")
    @Scripts.Render("~/Areas/HorasHombre/scripts/EmpleadoCliente/ReportesUsuario.js")
    @Scripts.Render("~/Areas/HorasHombre/scripts/EmpleadoCliente/ReportesUsuario_Cliente.js")


}




