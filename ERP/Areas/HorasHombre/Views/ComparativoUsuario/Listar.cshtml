@model ComparativoUsuarioViewModel
@{
    ViewBag.Title = "COMPARATIVO DEL EMPLEADO/DÍA";
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Fecha, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control datepicker" })
            @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
        </div>
    </div>
    <!--Filtro de la tabla-->
    <div class="col-md-12">
        <div class="row margin-top-1">
            <div class="col-md-10 text-left">
                <form id="form-filtro-tabla" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                        <input type="submit" class="btn btn-default" value="BUSCAR" />
                    </div>
                </form>
            </div>
        </div>

        <!--Tabla-->
        <div class="row">
            <div class="col-md-12">
                <table id="tabla-usuario" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>NOMBRE</th>
                            <th>HORAS</th>
                        </tr>
                    </thead>
                     
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
@Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_USUARIO = "@Url.Action("Listar", "ComparativoUsuario", new { Area = "HorasHombre"})";
    </script>
    @Styles.Render("~/bundles/dataTables.css")
    @Scripts.Render("~/Areas/HorasHombre/scripts/ComparativoUsuario/Listar.js")
}