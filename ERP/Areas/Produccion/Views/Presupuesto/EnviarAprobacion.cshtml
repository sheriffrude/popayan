@model EnviarAprobacionViewModel
@{
    ViewBag.Title = "Comentarios Ppto";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @*<p>Por favor ingrese los comentarios correspondientes</p>*@

    @using (Ajax.BeginForm("EnviarAprobacion", "Presupuesto", new { Area = "Produccion" },
                new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccessc" },
                new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

       

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        @Html.HiddenFor(m => m.Id)
        <p>¿Desea Agregar comentarios sobre este presupuesto antes de ser enviado a aprobación?</p>
        <div class="form-group">
            <label class="radio-inline">
                <input type="radio" name="optradio" onchange="OnchangeAprobacion(1)">Si
            </label>
            <label class="radio-inline">
                <input type="radio" name="optradio" onchange="OnchangeAprobacion(2)">No
            </label>
        </div>

        <div class="form-group hidden" id="observacion-aprobacion">
            @Html.LabelFor(m => m.ObservacionPresupuesto, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.ObservacionPresupuesto, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ObservacionPresupuesto, "", new { @class = "text-danger" })
        </div>



        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
