@model ListarAnticipoEnvioDocumentoViewModel
@{
    ViewBag.Title = "Historico de anticipos";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">

    @Html.HiddenFor(m => m.OrdenCompraId)

    <div class="clearfix"></div>
    <hr />
    <div class="clearfix"></div>

    <!--Filtro de la tabla-->
    <div class="row">
        <div class="col-md-12">
            <div class="pull-left">
                <form id="form-filtro-tabla" class="form-inline">
                    <div class="form-group">
                        <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />

                        <hr />
                        <div class="form-group">
                            <div class="form-group">
                                <div class="col-md-3 padding-left-0">
                                    @*@Html.LabelFor(m => m.Filtro, new { @class = "control-label" })*@


                                    @Html.DropDownListFor(m => m.TipoFiltro,
                                      Model.ListaTipoFiltro,
                                      "Seleccione",
                                      new
                                      {
                                          @class = "form-control",
                                          @onchange = "OnchangeFiltroHistoricoEnviarDocumento(this)"

                                      })
                                    @Html.ValidationMessageFor(m => m.TipoFiltro, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" id="input-numero-anticipo">
                                <div class="col-md-2 padding-left-0">
                                    @*<label class="control-label">Ingrese un número de presupuesto:</label>*@
                                    <input type="number" id="numero-anticipo" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group hidden" id="lista-estado">
                                <div class="col-md-3 padding-left-0">
                                    @*@Html.LabelFor(m => m.Filtro, new { @class = "control-label" })*@


                                    @Html.DropDownListFor(m => m.EstadoAnticipo,
                                  Model.ListaEstado,
                                  "Seleccione",
                                  new
                                  {
                                      @class = "form-control"

                                  })
                                    @Html.ValidationMessageFor(m => m.EstadoAnticipo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-produccion" value="BUSCAR" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Tabla documentos proveedor-->
    <div class="row">
        <div class="col-md-12">
            <table id="tabla-anticipos-enviar-documento" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"># Anticipo</th>
                        <th class="text-center">Solicitado Por</th>
                        <th class="text-center">Fecha Sol</th>
                        <th class="text-center">Fecha Requerido</th>
                        <th class="text-center">Fecha Max Legalización</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Descargar Pdf Anticipo</th>
                        <th class="text-center">Descargar Soporte De Pago</th>
                        <th class="text-center">Ver Detalle</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr />
    <div class="clearfix"></div>




</div>
