                <table id="tabla-revisar-documentos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th>TODO <div class="checkbox"><input type="checkbox" id="TodoDocumentoRevisarId" onchange="OnChangeSeleccionarTodosDocumentosRevisar(this)"></div></th>
