        <div class="form-inline">
            <div class="form-group col-md-3">
                <label class="control-label">Tipo de documento</label>
                <select class="form-control" id="select-tipo-documento-revisar"></select>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label" id="label-numero-documento">Fecha desde</label>
                <input type="text" id="fecha-desde-revisar-documento" class="form-control" />
            </div>
            <div class="form-group col-md-3 ">
                <label class="control-label" id="label-numero-documento">Fecha hasta</label>
                <input type="text" id="fecha-hasta-revisar-documento" class="form-control" />
            </div>
            <div class="form-group col-md-3 ">
                <a class="btn btn-warning" onclick="BuscarRevisarDocumentos()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
            </div>
            <div class="clearfix"></div>
            <hr />
            <div class="clearfix"></div>
