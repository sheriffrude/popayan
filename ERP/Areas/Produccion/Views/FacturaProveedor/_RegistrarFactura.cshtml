@{
    ViewBag.Title = "Registrar factura proveedor";
    ViewBag.BodyClass = "body-background-gray";
}
<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.Title</h2>
        <ul class="nav navbar-right panel_toolbox text-right">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <!--Filtro de la tabla-->
        <div class="row margin-top-1">
            <div class="col-md-4 text-left">
                <div class="form-group">
                    <label class="form-label">Ingrese el Número de OC:</label>
                    <div class="form-inline">
                        <input type="text" id="numero-oc" class="form-control" placeholder="" />

                        <a class="btn btn-warning" onclick="ConsultarOrdenCompra()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="form-group col-md-12  padding-left-0 hidden" id="orden-compra-factura">
                <div class="clearfix"></div>
                <br />
                <div class="clearfix"></div>

                <div class="col-md-6 padding-left-0 ">
                    <label class="control-label">Número órden compra:</label>
                    <input type="text" id="numero-orden" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0 ">
                    <label class="control-label">Fecha para Radicar:</label>
                    <input type="text" id="fecha-radicacion" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0 ">
                    <label class="control-label">Empresa:</label>
                    <input type="text" id="empresa" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Cliente:</label>
                    <input type="text" id="cliente" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">OT:</label>
                    <input type="text" id="orden-trabajo" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Descripción OT:</label>
                    <input type="text" id="descripcion-orden-trabajo" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Referencia OT:</label>
                    <input type="text" id="referencia" class="form-control" readonly />
                </div>
                <div class="clearfix"></div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Número ppto Agencia:</label>
                    <input type="text" id="numero-presupuesto" class="form-control" readonly />
                </div>
                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Número de Ppto Cliente:</label>
                    <input type="text" id="numero-presupuesto-cliente" class="form-control" readonly />
                </div>
                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Nombre Proveedor:</label>
                    <input type="text" id="proveedor" class="form-control" readonly />
                </div>
                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Nit Proveedor:</label>
                    <input type="text" id="nit-proveedor" class="form-control" readonly />
                </div>
                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Telefono Proveedor:</label>
                    <input type="text" id="telefono-proveedor" class="form-control" readonly />
                </div>
                <div class="clearfix"></div>
                <hr />
                <div class="clearfix"></div>

                <div class="row">
                    <div class="col-md-12 ">
                        <h2>Items</h2>
                        <table id="tabla-item-orden-compra-factura" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Descripción</th>
                                    <th class="text-center">Dias</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-center">Valor unidad</th>
                                    <th class="text-center">Costo Total</th>
                                    <th class="text-center">Impuesto Costo</th>
                                    <th class="text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <div class="clearfix"></div>
                <hr />
                <div class="clearfix"></div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">SubTotal:</label>
                    <input type="text" id="subtotal" class="form-control" readonly />
                </div>

                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Volumen:</label>
                    <input type="text" id="volumen" class="form-control" readonly />
                </div>

                <div class="col-md-5 padding-left-0">
                    <label class="control-label">Total Impuestos:</label>
                    <input type="text" id="iva" class="form-control" readonly />
                </div>


                <div class="col-md-1 padding-left-0">
                    <a href="#" type="button" data-size="lg" onclick="VerImpuestoOrdenCompra()" class="btn btn-produccion btn-md" data-toggle="modal" data-target="#" data-execute-onload="OnLoadImpuestoordenCompra" title="Ver Impuestos">
                        <span class="glyphicon glyphicon-level-up" aria-hidden="true"></span>
                    </a>
                </div>
                <div class="col-md-6 padding-left-0">
                    <label class="control-label">Total:</label>
                    <input type="text" id="total" class="form-control" readonly />
                </div>

                <div class="clearfix"></div>
                <hr />
                <div class="clearfix"></div>
                <div class="hidden" id="factura">
                    <div class="row">
                        <div class="col-md-12 ">
                            <h2>Factura</h2>
                            <table id="tabla-factura" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">Registrada por</th>
                                        <th class="text-center">Fecha y hora</th>
                                        <th class="text-center">Tipo de Documento</th>
                                        <th class="text-center"># Documento</th>
                                        <th class="text-center">Valor antes de Impuestos</th>
                                        <th class="text-center">Impuestos</th>
                                        <th class="text-center">Total</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <hr />
                <div class="clearfix"></div>
                @if (Sesion.HasPermission("PRO-FACTURA_PROVEEDOR_CREAR"))
                {
                    <div class="text-center hidden" id="button-registrar-factura">
                        <button type="button" class="btn btn-success" onclick="RegistrarFactura()">REGISTRAR FACTURA</button>
                    </div>
                }
                <div class="text-center hidden" id="button-cancelar-factura">
                    <button type="button" class="btn btn-success" onclick="CancelarFactura()" data-dismiss="modal">CANCELAR FACTURA</button>
                </div>
            </div>
        </div>
    </div>
</div>