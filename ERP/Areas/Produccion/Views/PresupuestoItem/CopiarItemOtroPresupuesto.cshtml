@model CopiarItemOtroPresupuestoViewModel
@{
    ViewBag.Title = "Copiar items de otro presupuesto";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    <form id="form_copiar_items_otro_presupuesto" class="form-inline">
        <div class="form-group">
            @Html.DropDownListFor(m => m.EmpresaId, Model.ListaEmpresas, "Seleccione Empresa", new { @class = "control-label selectpicker", onchange = "CopiarItemOtroPresupuesto.OnChangeEmpresa(this)" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.ClienteId, new List<SelectListItem>(), "Seleccione Cliente", new { @class = "control-label selectpicker", disabled = "disabled", onchange = "CopiarItemOtroPresupuesto.OnChangeCliente(this)" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.OrdenTrabajoEstadoId, Model.ListaOrdenesTrabajoEstado, "Seleccione Estado Orden Trabajo", new { @class = "control-label selectpicker", disabled = "disabled", onchange = "CopiarItemOtroPresupuesto.OnChangeOrdenTrabajoEstado(this)" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.OrdenTrabajoId, new List<SelectListItem>(), "Seleccione Orden Trabajo", new { @class = "control-label selectpicker", disabled = "disabled" })
        </div>
        <div class="form-group">
            <input type="search" id="search_copiar_items_otro_presupuesto" class="form-control" value="" />
            <input type="submit" class="btn btn-secondary" value="Buscar" />
        </div>
    </form>

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <label class="form-label">Presupuestos</label>
            <table id="tabla_copiar_items_otro_presupuesto_presupuestos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">Número</th>
                        <th class="text-center">Versión interna</th>
                        <th class="text-center">Versión externa</th>
                        <th class="text-center">Referencia</th>
                        <th class="text-center">Cliente</th>
                        <th class="text-center">Producto</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="ln_solid"></div>
    <div class="row">
        <div class="col-md-12">
            <label class="form-label">Items</label>
            <table id="tabla_copiar_items_otro_presupuesto_presupuestos_items" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">Orden</th>
                        <th class="text-center">Grupo</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripcion</th>
                        <th class="text-center">Dias</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-center">Valor Unitario</th>
                        <th class="text-center">SubTotal</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="text-right">
        <button type="button" class="btn btn-success" onclick="CopiarItemOtroPresupuesto.CopiarItems()">Copiar</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
    </div>
</div>
