@{
    ViewBag.Title = "Aprobaciones Factura de proveedor";
}
<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <div class="form-group">
                        <select name="Estado" id="Estado" class="btn dropdown-toggle btn-default">
                            <option>todas</option>
                            <option value="1">Pendiente</option>
                            <option value="2">Aprobado</option>
                            <option value="3">Rechazado</option>
                        </select>
                    </div>
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="AprobacionFacturaProveedorListar.ResetearTabla()" />
                </div>
            </form>
        </div>
    </div>
</div>
<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla_aprobaciones_facturas_proveedor" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Número de factura</th>
                    <th>Estado de la factura</th>
                    <th class="text-center">Número de Órden de Compra</th>
                    <th class="text-center">Ver factura</th>
                    <th class="text-center">Presupuesto</th>
                    <th class="text-center">Versión presupuesto</th>
                    <th>Aprobar/Rechazar</th>
                    <th class="text-center">Empresa</th>
                    <th class="text-center">Cliente</th>
                    <th class="text-center">OT</th>
                    <th class="text-center">Descripción OT</th>
                    <th class="text-center">Referencia</th>
                    <th class="text-center">Enviado Por</th>
                    <th class="text-center">Fecha y Hora</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
<script type="text/javascript">
        var URL_APROBACION_FACTURA_PROVEEDORN_LISTAR = "@Url.Action("Listar", "AprobacionFacturaProveedor", new { Area = "Produccion" })";
        var URL_PRESUPUESTO_CONSULTAR = "@Url.Action("Consultar", "Presupuesto", new { Area = "Produccion" })";
        var URL_APROBACION_FACTURA_PROVEEDOR_RESPONDER = "@Url.Action("Responder", "AprobacionFacturaProveedor", new { Area = "Produccion" })";
        var URL_JERARQUIA_APROBACION_FACTURA_PROVEEDOR_LISTAR = "@Url.Action("ListarJerarquia", "AprobacionFacturaProveedor", new { Area = "Produccion" })";
        var URL_PRESUPUESTO_ORDEN_COMPRA_CONSULTAR = "@Url.Action("Consultar", "PresupuestoOrdenCompra", new { Area = "Produccion"})";
        var URL_DETALLE_FACTURA_PROVEEDOR = "@Url.Action("Consultar", "FacturaProveedor", new { Area = "Produccion" })";
        var URL_CONSULTAR_ASOCIADO_ORDEN_COMPRA_FACTURA = "@Url.Action("ConsultarAsociadoOrdenCompraFactura", "PresupuestoItem", new { Area = "Produccion"})";
        var URL_CONSULTAR_ITEM_ORDEN_COMPRA_FACTURA = "@Url.Action("ConsultarItemOrdenCompraFactura", "PresupuestoItem", new { Area = "Produccion"})";
</script>
    @Scripts.Render("~/Areas/Produccion/scripts/AprobacionFacturaProveedor/Listar.js")
    @Scripts.Render("~/Areas/Produccion/scripts/AprobacionFacturaProveedor/Responder.js")
    @* Jerarquia Aprobacion *@
    @Scripts.Render("~/Areas/Produccion/scripts/AprobacionFacturaProveedor/ListarJerarquia.js")
}