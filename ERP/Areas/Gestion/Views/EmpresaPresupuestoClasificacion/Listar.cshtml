@model EmpresaPresupuestoClasificacionListarViewModel
@{
    ViewBag.Title = "Clasificación de presupuesto";
}
<div class="col-md-12 text-center">
    <h3>@Model.NombreComercial</h3>
    <br />
    @if (Model.LogoPath != null)
    {
        <img src="@Url.Content(Model.LogoPath)" class="img-responsive img-center" />
    }
</div>

<div class="clearfix"></div>
<div class="ln_solid"></div>

@Html.HiddenFor(m => m.EmpresaId)

<div class="row">
    <div class="col-md-12">
        @if (Sesion.HasPermission("GES-EMPRESA_PRESUPUESTO_CLASIFICACION_CREAR"))
            {
            <div class="pull-right">
                <a href="@Url.Action("Crear", "EmpresaPresupuestoClasificacion", new { Area = "Gestion", id = Model.EmpresaId })" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla_empresa_presupuesto_clasificaciones" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Clasificación</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
    var URL_EMPRESA_PRESUPUESTO_CLASIFICACION_LISTAR = "@Url.Action("Listar", "EmpresaPresupuestoClasificacion", new { Area = "Gestion" })";
    var URL_EMPRESA_PRESUPUESTO_CLASIFICACION_ELIMINAR = "@Url.Action("Eliminar", "EmpresaPresupuestoClasificacion", new { Area = "Gestion" })";
    var PERMISO_EMPRESA_PRESUPUESTO_CLASIFICACION_ELIMINAR = ("@Sesion.HasPermission("GES-EMPRESA_PRESUPUESTO_CLASIFICACION_ELIMINAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaPresupuestoClasificacion/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaPresupuestoClasificacion/Crear.js")
}