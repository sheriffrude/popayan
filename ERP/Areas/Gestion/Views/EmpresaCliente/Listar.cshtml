@model ListarEmpresaClienteViewModel
@{
    ViewBag.Title = "Clientes";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" id="btn-ver-todo" class="btn btn-secondary" value="VER TODO" onclick="resetearTabla()" />
            </div>
        </form>
    </div>
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-Clientes" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nit</th>
                <th class="text-center">Nombre Comercial</th>
                <th class="text-center">Teléfonos</th>
                <th class="text-center">Dirección</th>
                <th class="text-center">Ciudad</th>
                <th class="text-center">Estado</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_CLIENTES = "@Url.Action("Listar", "EmpresaCliente", new { Area = "Gestion",id = Model.EmpresaId})";
        var URL_VER_DETALLE_CLIENTES = "@Url.Action("Ver", "EmpresaCliente", new { Area = "Gestion"})";
        var URL_CAMBIAR_ESTADO_CLIENTES = "@Url.Action("CambiarEstado", "Cliente", new { Area = "Gestion" })";
        var PERMISO_CLIENTE_EDITAR = ("@Sesion.HasPermission("GES-CLIENTE_EDITAR")" === "True");
        var PERMISO_CLIENTE_VER = ("@Sesion.HasPermission("GES-EMPRESA_CLIENTE_VER")" === "True");
    </script>

    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaCliente/Listar.js")
}