@model RegistroClienteGrupoTarifarioViewModel

@{
    ViewBag.Title = "Crear grupos tarifarios";
}

<script type="text/javascript" src="~/Areas/Gestion/Scripts/ClienteGrupoTarifario/Crear.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("Crear", "ClienteGrupoTarifario", new AjaxOptions { HttpMethod = "POST", OnComplete = "CrearGrupoTarifario.onComplete" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label" }) (*)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del tipo de documento", maxlength = "100" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success" id="guardar" name="guardar">GUARDAR</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">CERRAR</button>
        </div>
    }
</div>
