@model CrearUsuarioPermisoViewModel
@{
    ViewBag.Title = "Asignar permiso a usuario";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Crear", "UsuarioPermiso", new { Area = "Gestion" },
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnComplete = "OnCompleteCrearUsuarioPermiso"
                        },
                        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        
        <input id="UsuarioId" name="UsuarioId" value="@Model.UsuarioId" hidden/>

        <div class="clearfix"></div>
        <div class="form-group">
            @Html.LabelFor(m => m.PermisoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.PermisoId, Model.ListaPermisos, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.PermisoId, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>