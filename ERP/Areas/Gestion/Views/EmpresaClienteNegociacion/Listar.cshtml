@model ListarEmpresaClienteNegociacionViewModel
@{
    ViewBag.Title = "Negociaciones clientes";
}
@Html.HiddenFor(m => m.EmpresaId)
<div class="col-md-12 text-center">
    <h3>@Model.NombreComercial</h3>
    <br />
    @if (Model.LogoPath != null)
    {
        <img src="@Url.Content(Model.LogoPath)" class="img-responsive img-center" />
    }
</div>
<div class="clearfix"></div>
<div class="ln_solid"></div>
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ListarEmpresaClienteNegociacion.ResetearTabla()" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-EMPRESA_CLIENTE_NEGOCIACION_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "EmpresaClienteNegociacion", new {Area = "Gestion", id = Model.EmpresaId})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
        </div>
    }
</div>
<!--Tabla-->
<div class="col-md-12">
    <table id="tabla_negociaciones" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Cliente</th>
                <th class="text-center">Tipo de regimen</th>
                <th class="text-center">Tipo de comisión</th>
                <th class="text-center">Valor comisión</th>
                <th class="text-center">Autoretenedor</th>
                <th class="text-center">Día cierre facturación</th>
                <th class="text-center">Plazo de pago (días)</th>
                <th class="text-center">Impuesto(s) - (%)</th>
                @*<th class="text-center">Editar</th>*@
                <th class="text-center">Estado</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@Styles.Render("~/bundles/dataTables.css")
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_EMPRESA_CLIENTE_NEGOCIACION_LISTAR = "@Url.Action("Listar", "EmpresaClienteNegociacion", new { area = "Gestion" })";
        var URL_EMPRESA_CLIENTE_NEGOCIACION_CAMBIAR_ESTADO = "@Url.Action("CambiarEstado", "EmpresaClienteNegociacion", new { area = "Gestion" })";
        var URL_EDITAR_PAIS = "@Url.Action("Editar", "EmpresaClienteNegociacion", new { Area = "Gestion" })";

        var PERMISO_EMPRESA_CLIENTE_NEGOCIACION_EDITAR = ("@Sesion.HasPermission("GES-EMPRESA_CLIENTE_NEGOCIACION_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/Scripts/EmpresaClienteNegociacion/Listar.js")
    @Scripts.Render("~/Areas/Gestion/Scripts/EmpresaClienteNegociacion/Crear.js")
    @*@Scripts.Render("~/Areas/Gestion/Scripts/EmpresaClienteNegociacion/Editar.js")*@
}
