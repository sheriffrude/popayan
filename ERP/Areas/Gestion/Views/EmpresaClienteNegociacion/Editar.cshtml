@model EditarEmpresaClienteNegociacionViewModel

@{
    ViewBag.Title = "Editar negociación cliente";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Editar", "EmpresaClienteNegociacion", new AjaxOptions {
        HttpMethod = "POST",
        OnComplete = "CrearEmpresaClienteNegociacion.onComplete"
    }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.EmpresaId)

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.ClienteId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.ClienteId, Model.ListaClientes, "Seleccione", new { @class = "form-control selectpicker", data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.ClienteId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TipoRegimenId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TipoRegimenId, Model.ListaTiposRegimen, "Seleccione", new { @class = "form-control selectpicker" })
            @Html.ValidationMessageFor(m => m.TipoRegimenId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AutoRetenedor, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.AutoRetenedor, new List<SelectListItem> {
          new SelectListItem { Text = "Si", Value = "true", Selected = true },
          new SelectListItem { Text = "No" , Value = "false"} }, "Seleccione", new { @class = "form-control selectpicker" })
            @Html.ValidationMessageFor(m => m.AutoRetenedor, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TipoComisionId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TipoComisionId, Model.ListaTipoComisiones, "Seleccione", new { @class = "form-control selectpicker " })
            @Html.ValidationMessageFor(m => m.TipoComisionId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ValorComision, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.ValorComision, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.ValorComision, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DiaCierreFacturacion, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DiaCierreFacturacion, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.DiaCierreFacturacion, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DiasPlazo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DiasPlazo, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.DiasPlazo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Impuestos, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Impuestos, Model.ListaImpuestos, null, new { @class = "form-control selectpicker", multiple = true, data_live_search = "true" })
            @Html.ValidationMessageFor(m => m.Impuestos, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>