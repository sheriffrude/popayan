@{
    ViewBag.Title = "Consultar información de las empresas asignadas al banco";
}

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-gestion" value="BUSCAR" />
                <input type="button" class="btn btn-gestion" value="VER TODO" onclick="ResetearTablaBancoEmpresa()" />
            </div>
        </form>
    </div>
        <div class="col-md-2 text-right">
            <a href="@Url.Action("Crear", "BancoEmpresas", new { Area = "Gestion", id = ViewBag.Id })" class="btn btn-gestion">Adicionar</a>
        </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="tabla-bancos-empresas" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Banco</th>
                    <th class="text-center">Nit del banco</th>
                    <th class="text-center">Empresa</th>
                    <th class="text-center">Nit de la empresa</th>
                    <th class="text-center">Estado</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_BANCO_EMPRESA = "@Url.Action("Listar", "BancoEmpresas", new { Area = "Gestion" , id = ViewBag.Id })";
        var URL_EDITAR_BANCO_EMPRESA = "@Url.Action("Editar", "BancoEmpresas", new { Area = "Gestion" })";
        var PERMISO_EDITAR_BANCO_EMPRESA = ("@Sesion.HasPermission("GES-BANCO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/BancoEmpresas/Listar.js")
}