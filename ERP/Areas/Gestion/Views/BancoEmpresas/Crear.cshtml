@model CrearBancoEmpresasViewModel
@{
    ViewBag.Title = "Asignar empresas al banco";
}

<!--Formulario-->
@using (Ajax.BeginForm("Crear", "BancoEmpresas", new { Area = "Gestion" },
                new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginForm", OnSuccess = "OnSuccessForm" },
                new { @class = "", role = "form" })
                )
{
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    @Html.ValidationMessage("Success", new { @class = "text-success" })
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input id="BancoId" hidden value="@ViewBag.Id"/>

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Empresas, new { @class = "control-label" })
        <table id="tabla-empresas" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <td></td>
                    <td>Nombre</td>
                    <td>Nit</td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div class="col-md-12 text-right">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a type="button" href="@Url.Action("Listar", "BancoEmpresas", new { Area = "Gestion" })" class="btn btn-warning">Cerrar</a>
    </div>
}

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_EMPRESAS_NO_ASIGNADAS = "@Url.Action("ListarEmpresasNoAsignadas", "BancoEmpresas", new { Area = "Gestion", id = ViewBag.Id })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/BancoEmpresas/Crear.js")
}