@model ProcessPlusERP.Areas.Gestion.Models.TipoTareaTrafico.RegistroTipoTareaTraficoViewModel
@{
    ViewBag.Title = "Editar tipo de solicitud administrativa";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Editar", "TipoTareaTrafico", new AjaxOptions { HttpMethod = "POST", OnComplete = "CrearTipoTareaTrafico.onComplete" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label" }) (*)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required", placeholder = "Nombre del tipo de solicitud", maxlength = "300" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DepartamentoTraficoId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.DepartamentoTraficoId, Model.DepartamentosTrafico, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.DepartamentoTraficoId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, false)
                    Inactivar
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, true)
                    Activar
                </label>
            </div>
            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success" id="guardar" name="guardar">GUARDAR</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">CERRAR</button>
        </div>
    }
</div>