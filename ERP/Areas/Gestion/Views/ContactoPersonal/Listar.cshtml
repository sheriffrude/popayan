@{
    ViewBag.Title = "Contactos personales";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="pull-left">
            <form id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaContactos()" />
                </div>
            </form>
        </div>
        @if (Sesion.HasPermission("GES-CONTACTO_PERSONAL_CREAR"))
        {
            <div class="pull-right">
                <a href="@Url.Action("Crear", "ContactoPersonal", new {Area = "Gestion"})" class="btn btn-primary" data-toggle="modal" data-target="#">Adicionar</a>
            </div>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-contactos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Correo</th>
                    <th class="text-center">Número de teléfono</th>
                    <th class="text-center">Número de celular</th>
                    <th class="text-center">Fecha de cumpleaños</th>
                    <th class="text-center">Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div hidden id="auxiliar">
    @Html.TextBox("date-format")
</div>

@Styles.Render("~/bundles/dataTables.css")
<!--Script listar Personas-->
@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_CONTACTOS = "@Url.Action("Listar", "ContactoPersonal", new { Area = "Gestion" })";
        var URL_EDITAR_CONTACTOS = "@Url.Action("Editar", "ContactoPersonal", new { Area = "Gestion" })";
        var PERMISO_EDITAR_CONTACTOS = ("@Sesion.HasPermission("GES-CONTACTO_PERSONAL_EDITAR")" === "True");
        var URL_CAMBIAR_ESTADO_CONTACTOS = "@Url.Action("CambiarEstado", "ContactoPersonal", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/ContactoPersonal/Listar.js")





}
