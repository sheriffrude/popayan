@model ListarEmpleadoDocumentoViewModel
@{
    ViewBag.Title = "Documentos Empleado";
}

<!-- Titulo y boton volver -->
<div class="col-md-12">
    <div class="pull-right">
        @if (Sesion.HasPermission("GES-EMPLEADO_DOCUMENTO_CREAR"))
        {
        <a href="@Url.Action("Crear", "EmpleadoDocumento", new {Area = "Gestion", id = Model.EmpleadoId})" title="Crear Documento Legal" class="btn btn-secondary">
            Crear Documento Legal
        </a>
        }
    </div>
</div>

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" action="#" class="form-inline">
            <div class="form-group">
                <input type="search" class="form-control" placeholder="Filtro" id="filtro-doc-legal-emp" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
            </div>
        </form>
    </div>
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-empleado-documentos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Tipo de documento</th>
                <th class="text-center">Estado</th>
                <th class="text-center"></th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_EMPLEADO_DOCUMENTO = "@Url.Action("Listar", "EmpleadoDocumento", new { Area = "Gestion", id = Model.EmpleadoId })";
        var URL_DESCARGAR_EMPLEADO_DOCUMENTO = "@Url.Action("DownloadFile", "EmpleadoDocumento", new { Area = "Gestion"})";
        var PERMISO_DESCARGAR_EMPLEADO_DOCUMENTO = ("@Sesion.HasPermission("GES-EMPLEADO_DOCUMENTO_DESCARGAR")" === "True");
        var URL_ELIMINAR_EMPLEADO_DOCUMENTO = "@Url.Action("Eliminar", "EmpleadoDocumento", new { Area = "Gestion"})";
        var PERMISO_ELIMINAR_EMPLEADO_DOCUMENTO = ("@Sesion.HasPermission("GES-EMPLEADO_DOCUMENTO_ELIMINAR")" === "True");

        var URL_EDITAR_EMPLEADO_DOCUMENTO = '@Url.Action("Editar", "EmpleadoDocumento", new { Area = "Gestion" })';

        var PERMISO_EDITAR_EMPLEADO_DOCUMENTO = ("@Sesion.HasPermission("GES-EMPLEADO_DOCUMENTO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoDocumento/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoDocumento/Crear.js")
}