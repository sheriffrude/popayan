@model ListarEmpresaProveedorViewModel
@{
    ViewBag.Title = "Proveedores";
}

<div class="col-md-12 text-center">
    <h3>@Model.NombreComercial</h3>
    <br />
    @if (Model.LogoPath != null)
    {
        <img src="@Url.Content(Model.LogoPath)" class="img-responsive img-center" />
    }
</div>

<div class="clearfix"></div>
<div class="ln_solid"></div>

<!--Filtro de la tabla-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla-empresa-proveedor" action="#" class="form-inline">
            <div class="form-group">
                <input type="search" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
            </div>
        </form>
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        @Html.HiddenFor(m => m.EmpresaId)
        <table id="tabla-empresa-proveedor" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nit</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Dirección</th>
                    <th class="text-center">Teléfono</th>
                    <th class="text-center">Correo</th>
                    <th class="text-center">Servicio</th>
                    <th class="text-center">Documentos</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_EMPRESA_PROVEEDOR = "@Url.Action("Listar", "EmpresaProveedor", new { Area = "Gestion" })";
        var URL_VER_EMPRESA_PROVEEDOR = "@Url.Action("Ver", "EmpresaProveedor", new { Area = "Gestion", id = Model.EmpresaId })";
        var URL_CAMBIAR_ESTADO_EMPRESA_PROVEEDOR = "@Url.Action("CambiarEstado", "EmpresaProveedor", new { Area = "Gestion" })";
        var URL_DOCUMENTO_EMPRESA_PROVEEDOR = "@Url.Action("Listar", "EmpresaProveedorDocumentoLegal", new { Area = "Gestion", empresaId = Model.EmpresaId })";
        var PERMISO_DOCUMENTO_EMPRESA_PROVEEDOR = ("@Sesion.HasPermission("GES-EMPRESA_PROVEEDOR_DOCUMENTO_LEGAL_LISTAR")" === "True");
        var PERMISO_VER_EMPRESA_PROVEEDOR = ("@Sesion.HasPermission("GES-EMPRESA_PROVEEDOR_VER")" === "True");
        var PERMISO_CAMBIAR_ESTADO_EMPRESA_PROVEEDOR = ("@Sesion.HasPermission("GES-EMPRESA_PROVEEDOR_CAMBIAR_ESTADO")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaProveedor/Listar.js")
}