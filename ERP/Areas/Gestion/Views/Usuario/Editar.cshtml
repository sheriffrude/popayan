@model EditarUsuarioViewModel
@{
    ViewBag.Title = "Editar usuario";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("Editar", "Usuario", new { Area = "Gestion" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            OnComplete = "OnCompleteEditarUsuario"
        },
        new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Persona, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Persona, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.RolId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.RolId, Model.ListaRoles, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.RolId, "", new { @class = "text-danger" })
        </div>

        <div class="clearfix"></div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.EsDirector, new { @class = "control-label" })
            @Html.CheckBoxFor(m => m.EsDirector, new { @class = "form-control custom-checkbox" })
            @Html.ValidationMessageFor(m => m.EsDirector, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.HorasHombre, new { @class = "control-label" })
            @Html.CheckBoxFor(m => m.HorasHombre, new { @class = "form-control custom-checkbox" })
            @Html.ValidationMessageFor(m => m.HorasHombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, false)
                    Inactivar
                </label>
            </div>
            <div class="radio">
                <label>
                    @Html.RadioButtonFor(m => m.Estado, true)
                    Activar
                </label>
            </div>
            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>