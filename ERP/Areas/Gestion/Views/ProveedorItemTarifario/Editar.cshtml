@model ProcessPlusERP.Areas.Gestion.Models.ProveedorItemTarifario.RegistroProveedorItemTarifarioViewModel
@{
    ViewBag.Title = "Crear item tarifario de proveedor";
}

<script src="~/Areas/Gestion/Scripts/ProveedorItemTarifario/Crear.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

@using (Ajax.BeginForm("Editar", "ProveedorItemTarifario", new AjaxOptions { HttpMethod = "POST", OnComplete = "crearItem.onComplete" }))
{
    <div class="modal-body">
        
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.ProveedorId)
        @Html.HiddenFor(m => m.Id)

        <div class="clearfix"></div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger small col-md-12" })
        <div class="clearfix"></div>

        <div class="form-group">
            @Html.LabelFor(m => m.GrupoTarifarioId, new { @class = "control-label" }) 
            @Html.DropDownListFor(m => m.GrupoTarifarioId, Model.GruposTarifarios, "Seleccione", new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.GrupoTarifarioId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label" }) 
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Registre el nombre del item", maxlength = "100" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ValorUnitario, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.ValorUnitario, new { @class = "form-control", placeholder = "Registre el valor del item", maxlength = "50", @onchange = "crearItem.onChangeValorUnitario()" })
            @Html.ValidationMessageFor(m => m.ValorUnitario, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" id="rangoEdadesDiv" hidden>
            @Html.LabelFor(m => m.RangoCantidadId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.RangoCantidadId, Model.RangoCantidades, "Seleccione", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RangoCantidadId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="guardar" name="guardar">GUARDAR</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">CERRAR</button>
    </div>
}
    