@{
    ViewBag.Title = "Consultar información de las empresas asignados a un usuario";
}

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
                <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ResetearTablaUsuariosEmpresa()" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-USUARIO_EMPRESA_CREAR"))
    {
        <div class="col-md-2 text-right">
            <a href="@Url.Action("Crear", "UsuarioEmpresa", new { Area = "Gestion" })" class="btn btn-secondary">Adicionar</a>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <table id="tabla-usuarios-empresas" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Documento</th>
                    <th class="text-center">Usuario</th>
                    <th class="text-center">Empresa</th>
                    <th class="text-center">Nit</th>
                    <th class="text-center">Por defecto</th>
                    <th class="text-center">Estado</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_USUARIO_EMPRESA = "@Url.Action("Listar", "UsuarioEmpresa", new { Area = "Gestion" })";
        var URL_EDITAR_USUARIO_EMPRESA = "@Url.Action("Editar", "UsuarioEmpresa", new { Area = "Gestion" })";
        var URL_EDITAR_EMPRESA_DEFECTO = "@Url.Action("EditarPorDefecto", "UsuarioEmpresa", new { Area = "Gestion" })";
        var PERMISO_EDITAR_USUARIO_EMPRESA = ("@Sesion.HasPermission("GES-USUARIO_EMPRESA_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/UsuarioEmpresa/Listar.js")
}