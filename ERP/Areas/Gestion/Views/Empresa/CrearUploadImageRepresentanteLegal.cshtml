@{
    ViewBag.Title = "Cargar Imagen";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

<div class="modal-body">
    <div class="form-group">
        <input type="file" class="form-control" onchange="Empresa_RepresentanteLegal.UploadImage.Upload(this)" />
    </div>
    <div id="content-imagen-upload_crop_representante_legal" class="form-group" hidden>
        <img id="logo-view-crop_representante_legal" src="" alt="Imagen">
    </div>
    <div class="text-right">
        <button type="button" class="btn btn-secondary" onclick="Empresa_RepresentanteLegal.UploadImage.Crop()">Seleccionar</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
    </div>
</div>

<div class="clearfix"></div>