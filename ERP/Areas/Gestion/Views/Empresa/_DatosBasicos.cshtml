<div class="form-group col-md-3">
    @Html.LabelFor(m => m.Volumen, new { @class = "control-label" })
    @Html.CheckBoxFor(m => m.Volumen, new { @class = "" })
    @Html.ValidationMessageFor(m => m.Volumen, "", new { @class = "text-danger" })
</div>
<div class="clearfix"></div>
<div class="form-group col-md-12">
    @Html.LabelFor(m => m.Logo, new { @class = "control-label" }) <br />
    <div id="content-logo-view" class="col-md-12">
        @if (Model.LogoPath != null)
        {
            <img id="LogoPath" src="@Model.LogoPath" class="img-responsive img-center" />
            @Html.HiddenFor(m => m.LogoPath, new { @class = "datos-basicos" })
        }
    </div>
    <br />
    <a href="@Url.Action("CrearUploadImageEmpresa", "Empresa", new { Area = "Gestion" })" class="btn btn-secondary" data-size="lg" data-target="#modal" data-toggle="modal">
        Cargar Imagen
    </a>
    @Html.ValidationMessageFor(m => m.Logo, "", new { @class = "text-danger" })
   
</div>

<div class="clearfix"></div>
<div class="ln_solid"></div>

@if (ViewBag.Edicion != null && ViewBag.Edicion == "Si")
{
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Estado, new { @class = "control-label" })
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.Estado, false, new { @class = "estado-empresa" })
                Inactivar
            </label>
        </div>
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.Estado, true, new { @class = "estado-empresa" })
                Activar
            </label>
        </div>
        @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
    </div>
}