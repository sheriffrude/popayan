@model ListarEmpleadoNovedadViewModel
@{
    ViewBag.Title = "Lista de novedades";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <div class="form-inline">
            <div class="form-group">
                @Html.DropDownListFor(m => m.NovedadId, Model.ListaTiposNovedad, "Seleccione", new { @class = "form-control selectpicker", onchange = "OnchangeUnidadNegocioLiquidacion(this)" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.FechaInicial, new { @class = "form-control", placeholder="Fecha inicial" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.FechaFinal, new { @class = "form-control", placeholder = "Fecha final" })
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input type="button" class="btn btn-secondary " value="BUSCAR" onclick="RecargarTablaNovedades()" />
                </div>
            </div>
        </div>
    </div>
    @if (Sesion.HasPermission("GES-EMPLEADO_NOVEDAD_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "EmpleadoNovedad", new { Area = "Gestion", id = Model.EmpleadoId })" class="btn btn-secondary" data-toggle="modal" data-target="#" data-execute-onload="OnLoadCrearEmpleadoNovedad">Adicionar</a>
        </div>
    }
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-novedades" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Novedad</th>
                <th class="text-center">Observaciones</th>
                <th class="text-center">Fecha Inicial</th>
                <th class="text-center">Fecha Final</th>
                <th class="text-center">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")
@Styles.Render("~/bundles/jquery.ui.timepicker.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_NOVEDADES = "@Url.Action("Listar", "EmpleadoNovedad", new { Area = "Gestion", id = Model.EmpleadoId })";
         var URL_EDITAR_NOVEDAD = "@Url.Action("Editar", "EmpleadoNovedad", new { Area = "Gestion"})";
        var URL_ELIMINAR_NOVEDAD = "@Url.Action("Eliminar", "EmpleadoNovedad", new { Area = "Gestion" })";
        var PERMISO_ELIMINAR_NOVEDAD = ("@Sesion.HasPermission("GES-EMPLEADO_NOVEDAD_ELIMINAR")" === "True");
        var PERMISO_EDITAR_NOVEDAD = ("@Sesion.HasPermission("GES-EMPLEADO_NOVEDAD_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoNovedad/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoNovedad/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpleadoNovedad/Editar.js")
}