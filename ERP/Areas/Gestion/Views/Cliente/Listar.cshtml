@{
    ViewBag.Title = "Clientes";
}

<!--Filtro-->
<div class="col-md-12">
    <div class="col-md-6">
        <div id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" placeholder ="Filtrar por Nombre, Nit o ubicación" name="input-filtro" id="input-filtro" class="form-control" />
                <input type="button" class="btn btn-secondary" value="BUSCAR" onclick="RecargarTablaClientes()" />
            </div>
        </div>
    </div>
    @if (Sesion.HasPermission("GES-CLIENTE_CREAR"))
    {
        <div class="col-md-1 col-md-offset-5">
            <a href="@Url.Action("Crear", "Cliente", new { Area = "Gestion" })" class="btn btn-primary">Adicionar</a>
        </div>
    }
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-Clientes" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nit</th>
                <th class="text-center">Nombre comercial</th>
                <th class="text-center">Teléfonos</th>
                <th class="text-center">Dirección</th>
                <th class="text-center">Ciudad</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var URL_LISTAR_CLIENTES = "@Url.Action("Listar", "Cliente", new { Area = "Gestion"})";
        var URL_VER_DETALLE_CLIENTES = "@Url.Action("Ver", "Cliente", new { Area = "Gestion"})";
        var URL_CAMBIAR_ESTADO_CLIENTES = "@Url.Action("CambiarEstado", "Cliente", new { Area = "Gestion" })";
        var URL_TARIFARIO_CLIENTES = "@Url.Action("Listar", "ClienteTarifario", new { Area = "Gestion" })";
        var URL_ADMINISTRACION = "@Url.Action("Menu", "Cliente", new { Area = "Gestion" })";
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/Cliente/Listar.js")
}