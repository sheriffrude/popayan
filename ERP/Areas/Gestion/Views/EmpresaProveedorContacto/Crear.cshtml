@model CrearEmpresaProveedorContactoViewModel
@{
    //Titulo
    ViewBag.Title = "Nuevo contacto";

    //Clase body personalizado
    ViewBag.BodyClass = "body-background-gray";
}

<!--Espacio vertical-->
<div class="help-block"></div>
<!--Formulario-->
<div class="modal-body">
    @using (Html.BeginForm("Crear", "EmpresaProveedorContacto",
                                                    new { Area = "Gestion" },
                                                    FormMethod.Post,
                                                    new { @class = "", role = "form", onsubmit = "onSuccessCrearCargos();" }))
    {
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.EmpresaId)

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.ProveedorId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.ProveedorId, Model.ListaProveedor, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.ProveedorId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.PrimerNombre, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PrimerNombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.SegundoNombre, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.SegundoNombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SegundoNombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.PrimerApellido, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PrimerApellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PrimerApellido, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.SegundoApellido, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.SegundoApellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SegundoApellido, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Cargo, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Cargo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Areas, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Areas, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Areas, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.MesId, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.MesId, Model.ListaMes, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
            @Html.ValidationMessageFor(m => m.MesId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.Dia, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Dia, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Dia, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Telefonos, new { @class = "control-label" })
            <div class="col-md-11 padding-left-0">
                <input type="text" id="telefono" class="form-control" />
            </div>
            <button type="button" onclick="AdicionarTelefono()" class="btn btn-info col-md-1">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
            @Html.ValidationMessageFor(m => m.Telefonos, "", new { @class = "text-danger" })
            <div class="col-md-12 padding-right-0 padding-left-0">
                <table id="tabla-telefonos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th>Telefono</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Celulares, new { @class = "control-label" })
            <div class="col-md-11 padding-left-0">
                <input type="text" id="celular" class="form-control" />
            </div>
            <button type="button" onclick="AdicionarCelular()" class="btn btn-info col-md-1">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
            @Html.ValidationMessageFor(m => m.Celulares, "", new { @class = "text-danger" })
            <div class="col-md-12 padding-right-0 padding-left-0">
                <table id="tabla-celulares" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                    <thead>
                        <tr>
                            <th>Celular</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="text-right">
            <input type="submit" alt="Submit" class="btn btn-success" value="Guardar"/>
            <a href="@Url.Action("Listar", "Empresa", new { Area = "Gestion" } )" class="btn btn-warning">
                Cerrar
            </a>
        </div>
    }


    @Styles.Render("~/bundles/dataTables.css")
    @section Scripts{
        @Scripts.Render("~/bundles/dataTables.js")
        @Scripts.Render("~/Areas/Gestion/scripts/EmpresaProveedorContacto/Crear.js")
    }
