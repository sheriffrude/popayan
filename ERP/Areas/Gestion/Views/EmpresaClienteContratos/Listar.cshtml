@model EmpresaClienteContratosViewModel

@{
    ViewBag.Title = "Contratos clientes";
}
<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
            </div>
        </form>
    </div>

@if (Sesion.HasPermission("GES-EMPRESA_CLIENTE_CONTRATOS_CREAR"))
{
    <div class="col-md-2 text-right">
        <a href="@Url.Action("Crear", "EmpresaClienteContratos", new { Area = "Gestion", id = Model.EmpresaId })" class="btn btn-primary">Adicionar</a>
    </div>
}
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-Contratos" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">NIT</th>
                    <th class="text-center">CLIENTE</th>
                    <th class="text-center">NOMBRE CONTRATO</th>
                    <th class="text-center">FECHA CONTRATO</th>
                    <th class="text-center">FECHA FIRMA</th>
                    <th class="text-center">FECHA CULMINACIÓN</th>
                    <th class="text-center">DESCARGAR</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")
<!--Script listar paises-->
@section Scripts{
    <script type="text/javascript">
        var URL_DESCARGAR_CONTRATO = "@Url.Action("DownloadFile", "EmpresaClienteContratos", new { Area = "Gestion"})";
        var URL_LISTAR_CONTRATOS = "@Url.Action("Listar", "EmpresaClienteContratos", new { Area = "Gestion", id = Model.EmpresaId })";
        var PERMISO_EMPRESA_CLIENTE_CONTRATO_DONWLOAD = ("@Sesion.HasPermission("GES-EMPRESA_CLIENTE_CONTRATOS_DONWLOADFILE")" === "True");
    </script>
    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaClienteContratos/Listar.js")



}
