@model VerBancoViewModel
@{
    //Titulo
    ViewBag.Title = "Información Banco";
}

<!--Titulo y boton volver-->
<div class="row">
    <div class="col-md-8 col-xs-8">
        @if (Model.LogoModel != null)
        {
            <div class="col-md-6">
                Logo
                <img src="@($"data:{Model.LogoModel.FileContentType};base64,{Convert.ToBase64String(Model.LogoModel.FileContent)}")" alt="" width="200" height="200" class="img-responsive img-center" />
            </div>
        }

        @if (Model.ImagenBienvenidaModel != null)
        {
            <div class="col-md-6">
                Imagen de bienvenida
                <img src="@($"data:{Model.ImagenBienvenidaModel.FileContentType};base64,{Convert.ToBase64String(Model.ImagenBienvenidaModel.FileContent)}")" alt="" width="200" height="200" class="img-responsive img-center" />
            </div>
        }
    </div>
    <div class="col-md-4 col-xs-4 text-right">
        <a href="@Url.Action("Editar", "Banco", new {Area = "Gestion", id = Model.Id})" class="btn btn-gestion">
            Editar
        </a>
    </div>

</div>

<!--Espacio vertical-->
<div class="help-block"></div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.NombreComercial, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.NombreComercial, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.RazonSocial, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.RazonSocial, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Nit, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Nit, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.FechaAniversario, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FechaAniversario, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.Pais, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Pais, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.Departamento, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Departamento, new { @class = "form-control", @readonly = "readonly" })
