@model ListarEmpresaProveedorDocumentoLegalViewModel
@{
    ViewBag.Title = "Documentos legales de proveedor";
}
<!-- Titulo y boton volver -->
<div class="row">
    <div class="col-md-12 col-xs-6 text-right">
        @if (Sesion.HasPermission("GES-PROVEEDOR_DOCUMENTO_LEGAL_CREAR"))
        {
            <a href="@Url.Action("Crear", "EmpresaProveedorDocumentoLegal", new {Area = "Gestion", id = Model.Id,empresaId = Model.EmpresaId})" class="btn btn-secondary" title="Crear Documento Legal">
                Crear Documento Legal
            </a>
        }
        <a href="@Url.Action("Listar", "EmpresaProveedor", new { Area = "Gestion", id = Model.EmpresaId} )" class="btn btn-warning" title="Cerrar">
            Cerrar
        </a>
    </div>
</div>

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-12 text-left">
        <form id="form-filtro-tabla-documento-legal" action="#" class="form-inline">
            <div class="form-group">
                <input type="search" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-default" value="BUSCAR" />
            </div>
        </form>
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-empresa-proveedor-documento-legal" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">NIT</th>
                    <th class="text-center">Proveedor</th>
                    <th class="text-center">Documento</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <!--Script listar Empresa impuestos-->
    <script type="text/javascript">
        var URL_LISTAR_EMPRESA_PROVEEDOR_DOCUMENTO_LEGAL = "@Url.Action("Listar", "EmpresaProveedorDocumentoLegal", new { Area = "Gestion", id = Model.Id, empresaId = Model.EmpresaId })";
        var URL_DESCARGAR_EMPRESA_PROVEEDOR_DOCUMENTO_LEGAL = "@Url.Action("DownloadFile", "EmpresaProveedorDocumentoLegal", new { Area = "Gestion"})";
        var PERMISO_DESCARGAR_EMPRESA_PROVEEDOR_DOCUMENTO_LEGAL = ("@Sesion.HasPermission("GES-PROVEEDOR_DOCUMENTO_LEGAL_DESCARGAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaProveedorDocumentoLegal/Listar.js")

}