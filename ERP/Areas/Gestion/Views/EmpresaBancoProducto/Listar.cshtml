@model ListarEmpresaBancoProductoViewModel

@{
    ViewBag.Title = "Productos del Banco";
}

<!-- Titulo y boton volver -->
<div class="row">
    <div class="col-md-6 col-xs-6">
        @if (Model.LogoModel != null)
        {
            <div class="col-md-6">
                <img src="@($"data:{Model.LogoModel.FileContentType};base64,{Convert.ToBase64String(Model.LogoModel.FileContent)}")" alt="" class="img-responsive img-center" />
            </div>
        }
        <h3 class="col-md-12 text-left"><strong>@ViewBag.Title</strong></h3>
    </div>
</div>

<!--Filtro de la tabla-->
<div class="row margin-top-1">
    <div class="col-md-10 text-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-default" value="BUSCAR" />
            </div>
        </form>
    </div>
    <div class="col-md-2text-right">
        @if (Sesion.HasPermission("GES-EMPRESA_BANCO_PRODUCTO_CREAR"))
        {
            <a href="@Url.Action("Crear", "EmpresaBancoProducto", new {Area = "Gestion", id = Model.EmpresaId, bancoId = Model.BancoId})" class="btn btn-gestion" data-toggle="modal" data-target="#">
                Nuevo Producto
            </a>
        }
    </div>
</div>

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-banco-producto" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Numero de Cuenta</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Tipo</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    <script type="text/javascript">
        var URL_EMPRESA_BANCO_PRODUCTO_LISTAR = "@Url.Action("Listar", "EmpresaBancoProducto", new { Area = "Gestion", id = Model.EmpresaId, bancoId = Model.BancoId })";
        var URL_EMPRESA_BANCO_PRODUCTO_EDITAR = "@Url.Action("Editar", "EmpresaBancoProducto", new { Area = "Gestion" })";
        var URL_EMPRESA_BANCO_PRODUCTO_CAMBIAR_ESTADO = "@Url.Action("CambiarEstado", "EmpresaBancoProducto", new { Area = "Gestion" })";
        var PERMISO_EMPRESA_BANCO_PRODUCTO_EDITAR = ("@Sesion.HasPermission("GES-EMPRESA_BANCO_PRODUCTO_EDITAR")" === "True");
    </script>

    @Scripts.Render("~/bundles/dataTables.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaBancoProducto/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaBancoProducto/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaBancoProducto/Editar.js")
}