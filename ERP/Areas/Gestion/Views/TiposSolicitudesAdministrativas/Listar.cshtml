    </div>
</div>

<hr />

<!--Tabla-->
<div class="row">
    <div class="col-md-12">
        <table id="tabla-solicitudes" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Departamento</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")

    <script type="text/javascript">
        var urlListar = "@Url.Action("Listar", "TiposSolicitudesAdministrativas", new { area = "Gestion" })";
        var urlEditar = "@Url.Action("Editar", "TiposSolicitudesAdministrativas", new { area = "Gestion" })";
    </script>

    @Scripts.Render("~/Areas/Gestion/Scripts/TipoSolicitudesAdministrativas/Listar.js")
    @Scripts.Render("~/Areas/Gestion/Scripts/TipoSolicitudesAdministrativas/Crear.js")
}

