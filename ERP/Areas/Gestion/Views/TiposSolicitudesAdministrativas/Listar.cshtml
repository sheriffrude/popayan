@{
    ViewBag.Title = "Listar";
}

<!--Filtro de la tabla-->
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <div id="form-filtro-tabla" class="form-inline">
                <div class="form-group">
                    <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                    <input type="button" class="btn btn-secondary" value="BUSCAR" onclick="ListarSolicitudesAdministrativas.reconstruirTabla()" />
                    <input type="button" class="btn btn-secondary" value="VER TODO" onclick="ListarSolicitudesAdministrativas.ResetearTablaPais()" />
                </div>
            </div>
        </div>
        @*@if (Sesion.HasPermission("PAR-SALARIO-INTEGRAL-CREAR))
