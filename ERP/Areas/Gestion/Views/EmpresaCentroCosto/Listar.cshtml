@model ListarEmpresaCentroCostoViewModel
@{
    ViewBag.Title = "Centros de Costos";
}

<div class="col-md-12 text-center">
    <h3>@Model.NombreComercial</h3>
    <br />
    @if (Model.LogoPath != null)
    {
        <img src="@Url.Content(Model.LogoPath)" class="img-responsive img-center" />
    }
</div>

<div class="clearfix"></div>
<div class="ln_solid"></div>

<!--Filtro-->
<div class="col-md-12">
    <div class="pull-left">
        <form id="form-filtro-tabla" class="form-inline">
            <div class="form-group">
                <input type="search" name="input-filtro" id="input-filtro" class="form-control" placeholder="Filtro" />
                <input type="submit" class="btn btn-secondary" value="BUSCAR" />
            </div>
        </form>
    </div>
    @if (Sesion.HasPermission("GES-EMPRESA_CENTRO_COSTO_CREAR"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Crear", "EmpresaCentroCosto", new {Area = "Gestion", id = Model.EmpresaId})" class="btn btn-secondary" data-toggle="modal" data-target="#">Adicionar</a>
        </div>
    }
</div>

<!--Tabla-->
<div class="col-md-12">
    <table id="tabla-centros-costo" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@Styles.Render("~/bundles/dataTables.css")

@section Scripts{
    @Scripts.Render("~/bundles/dataTables.js")
    <script type="text/javascript">
        var URL_LISTAR_EMPRESA_CENTRO_COSTO = "@Url.Action("Listar", "EmpresaCentroCosto", new { Area = "Gestion", id = Model.EmpresaId })";
        var URL_EDITAR_EMPRESA_CENTRO_COSTO = "@Url.Action("Editar", "EmpresaCentroCosto", new { Area = "Gestion" })";
        var PERMISO_EDITAR_EMPRESA_CENTRO_COSTO = ("@Sesion.HasPermission("GES-EMPRESA_CENTRO_COSTO_EDITAR")" === "True");
    </script>
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaCentroCosto/Listar.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaCentroCosto/Crear.js")
    @Scripts.Render("~/Areas/Gestion/scripts/EmpresaCentroCosto/Editar.js")
}