@model CrearEmpresaImpuestoViewModel

@{
    ViewBag.Title = "Crear";
    var listaImpuestosRentables = ViewBag.ListaImpuestosRentables as IEnumerable<SelectListItem>;
    var listaPeriocidad = ViewBag.ListaPeriocidadPago as IEnumerable<SelectListItem>;
}

<div id="modal-crear-impuesto">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Agregar Impuesto</h4>
    </div>
    @using (Ajax.BeginForm("Crear", "EmpresaImpuesto", new { Area = "Gestion" },
                                                    new AjaxOptions
                                                    {
                                                        HttpMethod = "POST",
                                                        OnBegin = "OnBeginCrearImpuestoEmpresa",
                                                        OnComplete = "OnCompleteCrearImpuestoEmpresa"
                                                    },
                                                    new { @class = "", role = "form" })
                                                    )
    {
        <div class="modal-body">
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            @Html.ValidationMessage("Success", new { @class = "text-success" })
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.EmpresaId)

            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.ImpuestoId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.ImpuestoId, listaImpuestosRentables, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
                @Html.ValidationMessageFor(m => m.ImpuestoId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.FechaVencimiento, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FechaVencimiento, new { @class = "form-control", placeholder = "dd/mm/aaaa", onkeydown = "javascript:return false;" })
                @Html.ValidationMessageFor(m => m.FechaVencimiento, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Valor, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", type = "number", min = "0", step = "0.01" })
                @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.PeriocidadId, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.PeriocidadId,
           listaPeriocidad, "Seleccione", new { @class = "form-control selectpicker", data_live_search="true" })
                @Html.ValidationMessageFor(m => m.PeriocidadId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.CorreoNotificacion, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.CorreoNotificacion, new { @class = "form-control", type = "email" })
                @Html.ValidationMessageFor(m => m.CorreoNotificacion, "", new { @class = "text-danger" })

                <div class="text-right" style="padding-top: 10px;">
                    <button type="button" class="btn btn-secondary text-right" onclick="agregarCorreoImpuesto()">Agregar</button>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12" id="listado-correos">
                    <table id="tabla-correos-notificacion" class="table table-striped table-bordered compact text-center" cellpadding="0" width="100%">
                        <thead>
                            <tr>
                                <th class="text-center">Correos eléctronicos</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-default">Guardar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    }
</div>
<script>initCrearImpuesto();</script>